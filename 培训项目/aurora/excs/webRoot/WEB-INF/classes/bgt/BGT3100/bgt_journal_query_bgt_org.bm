--><bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[ 
   select bo.bgt_org_id, bo.bgt_org_code, bo.description,fc.company_short_name   
     from fnd_companies_vl fc, bgt_organizations_vl bo 
    where fc.set_of_books_id = bo.set_of_books_id 
      and fc.company_id = ${/session/@company_id}  ]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter inputPath="/session/@company_id"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="bgt_org_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="BGT_ORG_ID" required="true"/>
        <bm:field name="bgt_org_code" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="BGT_ORG_CODE" required="true"/>
        <bm:field name="description" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="DESCRIPTION"/>
        <bm:field name="company_short_name" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="COMPANY_SHORT_NAME"/>
    </bm:fields>
</bm:model>
