<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
       SELECT *

  FROM (SELECT V.BUDGET_ITEM_ID AS ID,

       V.BUDGET_ITEM_CODE CODE,
       
       V.DESCRIPTION AS DES,

       V.BUDGET_ITEM_CODE || '-' ||V.DESCRIPTION DESCRIPTION,

       'BUDGET_ITEM' AS PARAMETER_CODE

  FROM bgt_budget_items_company_vl V, BGT_ORGANIZATIONS B, FND_COMPANIES F

 WHERE B.BGT_ORG_ID = V.BUDGET_ORG_ID

   AND F.SET_OF_BOOKS_ID = B.SET_OF_BOOKS_ID
   
   AND V.COMPANY_ID = F.COMPANY_ID

   AND F.COMPANY_ID = ${@company_id}

UNION

SELECT V1.BUDGET_ITEM_TYPE_ID AS ID,

       V1.BUDGET_ITEM_TYPE_CODE CODE,
       
       V1.DESCRIPTION,

       V1.BUDGET_ITEM_TYPE_CODE || '-' ||V1.DESCRIPTION DESCRIPTION,

       'BUDGET_ITEM_TYPE' AS PARAMETER_CODE

  FROM BGT_BUDGET_ITEM_TYPES_VL V1, BGT_ORGANIZATIONS B, FND_COMPANIES F

 WHERE V1.ENABLED_FLAG = 'Y'

   AND B.BGT_ORG_ID = V1.BUDGET_ORG_ID

   AND F.SET_OF_BOOKS_ID = B.SET_OF_BOOKS_ID
   
   AND F.COMPANY_ID = ${@company_id}

UNION

SELECT 0 AS ID,

       V2.CURRENCY_CODE CODE,

	   V2.CURRENCY_NAME,

       V2.CURRENCY_CODE || '-' ||V2.CURRENCY_NAME DESCRIPTION,

       'CURRENCY' AS PARAMETER_CODE

  FROM GLD_CURRENCY_VL V2

 WHERE V2.ENABLED_FLAG = 'Y'

UNION

SELECT V3.EXPENSE_USER_GROUP_ID,

       V3.EXPENSE_USER_GROUP_CODE,
       
       V3.DESCRIPTION,

       V3.EXPENSE_USER_GROUP_CODE|| '-' ||V3.DESCRIPTION DESCRIPTION,

       'EMPLOYEE_GROUP' AS PARAMETER_CODE

  FROM EXP_USER_GROUP_HEADERS_VL V3

 WHERE V3.ENABLED_FLAG = 'Y'

   AND V3.COMPANY_ID = ${@company_id}

UNION

SELECT V.EMPLOYEE_JOB_ID,

       V.EMPLOYEE_JOB_CODE,
       
       V.DESCRIPTION,

       V.EMPLOYEE_JOB_CODE|| '-' ||V.DESCRIPTION DESCRIPTION,

       'EMPLOYEE_JOB' AS PARAMETER_CODE

  FROM EXP_EMPLOYEE_JOBS_VL V

 WHERE V.ENABLED_FLAG = 'Y'

UNION

SELECT V.EMPLOYEE_LEVELS_ID,

       V.EMPLOYEE_LEVELS_CODE,
       
       V.DESCRIPTION,

       V.EMPLOYEE_LEVELS_CODE|| '-' ||V.DESCRIPTION DESCRIPTION,

       'EMPLOYEE_LEVEL' AS PARAMETER_CODE

  FROM EXP_EMPLOYEE_LEVELS_VL V

 WHERE V.ENABLED_FLAG = 'Y'

UNION

SELECT T.EMPLOYEE_ID, T.EMPLOYEE_CODE, T.NAME, T.EMPLOYEE_CODE|| '-' ||T.NAME DESCRIPTION, 'EMPLOYEE' AS PARAMETER_CODE

  FROM EXP_EMPLOYEES T, EXP_EMPLOYEE_ASSIGNS EEA

 WHERE T.ENABLED_FLAG = 'Y'

   AND T.EMPLOYEE_ID = EEA.EMPLOYEE_ID

   AND EEA.COMPANY_ID = ${@company_id}

UNION

SELECT V.OPERATION_UNIT_ID,

       V.OPERATION_UNIT_CODE,
       
       V.DESCRIPTION,

       V.OPERATION_UNIT_CODE|| '-' ||V.DESCRIPTION DESCRIPTION,

       'OPERATION_UNIT' AS PARAMETER_CODE

  FROM FND_OPERATION_UNITS_VL V

 WHERE V.ENABLED_FLAG = 'Y'

   AND V.COMPANY_ID = ${@company_id}

UNION

SELECT V.POSITION_GROUP_ID,

       V.POSITION_GROUP_CODE,
       
       V.DESCRIPTION,

       V.POSITION_GROUP_CODE|| '-' ||V.DESCRIPTION DESCRIPTION,

       'ORG_POSITION_GROUP' AS PARAMETER_CODE

  FROM EXP_POSITION_GROUPS_VL V

 WHERE V.ENABLED_FLAG = 'Y'

   AND V.COMPANY_ID = ${@company_id}

UNION

SELECT V.POSITION_ID,

       V.POSITION_CODE,
       
       V.DESCRIPTION,

       V.POSITION_CODE|| '-' ||V.DESCRIPTION DESCRIPTION,

       'ORG_POSITION' AS PARAMETER_CODE

  FROM EXP_ORG_POSITION_VL V

 WHERE V.ENABLED_FLAG = 'Y'

   AND V.COMPANY_ID = ${@company_id}

UNION

SELECT E.UNIT_GROUP_ID,

       E.UNIT_GROUP_CODE,
       
       E.DESCRIPTION,

       E.UNIT_GROUP_CODE|| '-' ||E.DESCRIPTION DESCRIPTION,

       'ORG_UNIT_GROUP' AS PARAMETER_CODE

  FROM EXP_ORG_UNIT_GROUPS_VL E

 WHERE E.ENABLED_FLAG = 'Y'

   AND E.COMPANY_ID = ${@company_id}

UNION

SELECT R.UNIT_ID, R.UNIT_CODE, R.DESCRIPTION, R.UNIT_CODE|| '-' ||R.DESCRIPTION DESCRIPTION, 'ORG_UNIT' AS PARAMETER_CODE

  FROM EXP_ORG_UNIT_VL R

 WHERE R.ENABLED_FLAG = 'Y'

   AND R.COMPANY_ID = ${@company_id}

UNION

SELECT V.ORG_UNIT_LEVEL_ID,

       V.ORG_UNIT_LEVEL_CODE,
       
       V.DESCRIPTION,

       V.ORG_UNIT_LEVEL_CODE|| '-' ||V.DESCRIPTION DESCRIPTION,

       'ORG_UNIT_LEVEL' AS PARAMETER_CODE

  FROM EXP_ORG_UNIT_LEVELS_VL V

UNION

SELECT V.RESPONSIBILITY_CENTER_ID,

       V.RESPONSIBILITY_CENTER_CODE,
       
       V.RESPONSIBILITY_CENTER_NAME,

       V.RESPONSIBILITY_CENTER_CODE|| '-' ||V.RESPONSIBILITY_CENTER_NAME,

       'RESPONSIBILITY_CENTER' AS PARAMETER_CODE

  FROM FND_RESPONSIBILITY_CENTERS_VL V

  WHERE V.COMPANY_ID = ${@company_id}

) T

	#WHERE_CLAUSE#

 ORDER BY CODE
]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter name="company_id"/>
                <bm:parameter name="parameter_code"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="code" displayWidth="200" forDisplay="true" forQuery="true" physicalName="CODE" prompt="WORK_FLOW_CODE"/>
        <bm:field name="des" displayWidth="200" forDisplay="true" forQuery="true" physicalName="DES" prompt="BGT_BUDGET_ITEMS.DECRIPTION"/>
        <bm:field name="description" physicalName="DESCRIPTION"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field name="code" queryExpression="T.CODE like ${/parameter/@code}"/>
        <bm:query-field name="des" queryExpression="(T.DES like &apos;%&apos;||${/parameter/@des}||&apos;%&apos; or T.CODE like &apos;%&apos;||${/parameter/@des}||&apos;%&apos;)"/>
    </bm:query-fields>
    <bm:data-filters>
        <bm:data-filter enforceOperations="query" expression="T.PARAMETER_CODE =${@parameter_code}"/>
    </bm:data-filters>
</bm:model>
