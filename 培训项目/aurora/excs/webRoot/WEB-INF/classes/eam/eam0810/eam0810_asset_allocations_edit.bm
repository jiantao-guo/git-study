<ns1:model xmlns:ns1="http://www.aurora-framework.org/schema/bm" alias="t1" extend="eam.eam_asset_allocations" extendMode="reference" needAccessControl="false">
    <ns1:operations>
        <ns1:operation name="execute">
            <ns1:update-sql><![CDATA[
    			begin
    				eam_asset_allocations_pkg.insert_asset_allocations(p_allocation_id            => ${@allocation_id},
									                                   p_asset_id                 => ${../../@asset_id},
									                                   p_company_id               => ${@company_id},
									                                   p_responsibility_center_id => ${@responsibility_center_id},
									                                   p_quantity                 => ${@quantity},
									                                   p_memo                     => ${@memo},
									                                   p_user_id          		  => ${/session/@user_id});
    			end;
    		]]></ns1:update-sql>
            <ns1:parameters>
                <ns1:parameter name="allocation_id" output="true" outputPath="@allocation_id"/>
            </ns1:parameters>
        </ns1:operation>
        <ns1:operation name="insert">
            <ns1:update-sql><![CDATA[
    			begin
    				eam_asset_allocations_pkg.insert_asset_allocations(p_allocation_id            => ${@allocation_id},
									                                   p_asset_id                 => ${@asset_id},
									                                   p_company_id               => ${@company_id},
									                                   p_responsibility_center_id => ${@responsibility_center_id},
									                                   p_quantity                 => ${@quantity},
									                                   p_memo                     => ${@memo},
									                                   p_user_id          		  => ${/session/@user_id});
    			end;
    		]]></ns1:update-sql>
            <ns1:parameters>
                <ns1:parameter name="allocation_id" output="true" outputPath="@allocation_id"/>
            </ns1:parameters>
        </ns1:operation>
        <ns1:operation name="update">
            <ns1:update-sql><![CDATA[
    			begin
    				eam_asset_allocations_pkg.update_asset_allocations(p_allocation_id            => ${@allocation_id},
								                                       p_company_id               => ${@company_id},
								                                       p_responsibility_center_id => ${@responsibility_center_id},
								                                       p_quantity                 => ${@quantity},
								                                       p_memo                     => ${@memo},
									                                   p_user_id                  => ${/session/@user_id});
    			end;
    		]]></ns1:update-sql>
        </ns1:operation>
    </ns1:operations>
</ns1:model>
