<ns1:model xmlns:ns2="aurora.database.local.oracle" xmlns:ns1="http://www.aurora-framework.org/schema/bm">
    <ns1:operations>
        <ns1:operation name="insert">
            <ns1:update-sql><![CDATA[
                begin
                  gld_exchange_rate_pkg.insert_gld_exchange_rate(${@currency_code},
                                                                 ${@to_currency},
                                                                 ${@type_code},
                                                                 ${@exchange_rate_quotation},
                                                                 ${/session/@company_id},
                                                                 ${@currency_volume},
                                                                 ${@conversion_rate},
                                                                 to_date(${@conversion_date},'yyyy-mm-dd'),
                                                                 ${@period_name},
                                                                 ${@period_num},
                                                                 ${/session/@user_id},
                                                                 ${/session/@user_id});
                
                end;
            ]]></ns1:update-sql>
        </ns1:operation>
        <ns1:operation name="update">
            <ns1:update-sql><![CDATA[
                begin
                  gld_exchange_rate_pkg.update_gld_exchange_rate(${@exchange_rate_id},
                                                                       ${@currency_code},
                                                                       ${@to_currency},
                                                                       ${@type_code},
                                                                       ${@exchange_rate_quotation},
                                                                       ${/session/@company_id},
                                                                       ${@currency_volume},
                                                                       ${@conversion_rate},
                                                                       to_date(${@conversion_date},'yyyy-mm-dd'),
                                                                       ${@period_name},
                                                                       ${@period_num},
                                                                       ${/session/@user_id},
                                                                       ${/session/@user_id});
                
                end;
            ]]></ns1:update-sql>
        </ns1:operation>
        <ns1:operation name="delete">
            <ns1:update-sql><![CDATA[
                begin
                  gld_exchange_rate_pkg.delete_gld_exchange_rate(${@exchange_rate_id});
                end;
            ]]></ns1:update-sql>
        </ns1:operation>
    </ns1:operations>
</ns1:model>
