<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    *
                FROM
                    (SELECT
                        b.segmenttyp AS segment_type,
                        'COMPANY' type,
                        '' AS leaf,
                        'C'
                        || b.nr AS id,
                        'C'
                        || b.parpno AS parent_id,
                        d.detail_id,
                        ${@rule_id} AS rule_id,
                        d.parent_detail_id,
                        d.rule_detail_1_id,
                        d.rule_detail_1_type,
                        d.rule_detail_2_id,
                        d.rule_detail_2_type,
                        d.rule_detail_3_id,
                        d.rule_detail_3_type,
                        d.rule_detail_4_id,
                        d.rule_detail_4_type,
                        'Y' AS expanded
                    FROM
                        fnd_idoc_segments b,
                        (SELECT
                            dd.detail_id,
                            dd.parent_detail_id,
                            dd.rule_detail_1_id,
                            dd.rule_detail_1_type,
                            dd.rule_detail_2_id,
                            dd.rule_detail_2_type,
                            dd.rule_detail_3_id,
                            dd.rule_detail_3_type,
                            dd.rule_detail_4_id,
                            dd.rule_detail_4_type,
                            dd.segment_type
                        FROM
                            fnd_idoc_convert_detail dd
                        WHERE
                            dd.rule_id = ${@rule_id}
                        ) d
                    WHERE
                        b.idoc_type_id =
                        (SELECT
                            idoc_type_id
                        FROM
                            fnd_idoc_convert_rules r
                        WHERE
                            rule_id = ${@rule_id}
                        ) AND
                        b.segmenttyp = d.SEGMENT_TYPE(+)
                    ) a order by id
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
