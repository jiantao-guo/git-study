<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
            select cv.company_id,
				   cv.vender_id,
				   sv.bank_branch_code,
				   sv.bank_account_code,
				   cv.payment_term_id,
				   pt.description payment_term_de,
				   cv.payment_method,
				   cv.currency_code,
				   cv.tax_type_id,
				   ttc.tax_type_code,
				   cv.approved_vender_flag,
				   cv.enabled_flag,
				   c.company_code,
				   c.company_short_name
			  from pur_company_venders   cv,
				   fnd_companies_vl      c,
				   pur_system_venders    sv,
				   csh_payment_terms_vl  pt,
				   fnd_tax_type_codes_vl ttc
		#WHERE_CLAUSE# order by c.company_code
		]]></bm:query-sql>
        </bm:operation>
        <bm:operation name="insert">
            <bm:update-sql><![CDATA[
        		
        			begin
					   pur_system_venders_pkg.assign_pur_company_venders
					   (
					      ${@company_id},
					      ${/parameter/@vender_id},
						  ${@payment_term_id},
						  ${@payment_method},
						  ${@currency_code},
						  ${@tax_type_id},
						  ${@approved_vender_flag},
						  ${@enabled_flag},
			              ${/session/@user_id}
					   );
					end;
        		
        	]]></bm:update-sql>
        </bm:operation>
        <bm:operation name="update">
            <bm:update-sql><![CDATA[
        		
        			begin
					   pur_system_venders_pkg.update_pur_company_venders
					   (
					      ${@company_id},
					      ${/parameter/@vender_id},
						  ${@payment_term_id},
						  ${@payment_method},
						  ${@currency_code},
						  ${@tax_type_id},
						  ${@approved_vender_flag},
						  ${@enabled_flag},
			              ${/session/@user_id}
					   );
					end;
        		
        	]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
    <bm:data-filters>
        <bm:data-filter enforceOperations="query" expression=" cv.company_id = c.company_id  and cv.vender_id = sv.vender_id  and cv.payment_term_id = pt.payment_term_id(+) and cv.tax_type_id = ttc.tax_type_id(+)"/>
    </bm:data-filters>
    <bm:query-fields>
        <bm:query-field name="vender_id" queryExpression="cv.vender_id = ${@vender_id}"/>
    </bm:query-fields>
</bm:model>
