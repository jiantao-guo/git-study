<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
		             select t1.bank_account_id information_id,
		                    t1.customer_id,
		                    t1.company_id,
		                    t1.bank_branch_code,
		                    t1.bank_account_code,
		                    t1.line_number,
		                    t1.bank_code,
		                    t1.bank_name,
		                    t1.bank_location_code,
		                    t1.bank_location,
		                    t1.province_code,
		                    t1.province_name,
		                    t1.city_code,
		                    t1.city_name,
		                    t1.notes,
		                    t1.primary_flag,
		                    t1.enabled_flag
		                    from ord_customer_bank_accounts t1
		                    where t1.customer_id = ${@customer_id}
		       ]]></bm:query-sql>
        </bm:operation>
        <bm:operation name="insert">
            <bm:update-sql><![CDATA[


			begin
			  
			  ord_system_customers_pkg.insert_company_cus_bank_inf(p_customer_id => ${@customer_id},
			                                                       p_company_id => ${/session/@company_id},
			                                                       p_bank_branch_code => ${@bank_branch_code},
			                                                       p_bank_account_code =>${@bank_account_code},
			                                                       p_line_number => ${@line_number},
												                   p_bank_code => ${@bank_code},
												                   p_bank_name => ${@bank_name},
												                   p_bank_location_code => ${@bank_location_code},
												                   p_bank_location => ${@bank_location},
												                   p_province_code => ${@province_code},
												                   p_province_name => ${@province_name},
												                   p_city_code => ${@city_code},
												                   p_city_name => ${@city_name},
												                   p_notes => ${@notes},
												                   p_primary_flag => ${@primary_flag},
			                                                       p_enabled_flag=>${@enabled_flag},
			                                                       p_create_by => ${/session/@user_id},
			                                                       p_last_update_by => ${/session/@user_id});
			end;
             
        ]]></bm:update-sql>
        </bm:operation>
        <bm:operation name="update">
            <bm:update-sql><![CDATA[
          begin
 
                    ord_system_customers_pkg.update_company_cus_bank_inf(p_information_id => ${@information_id},
                                                       p_bank_branch_code => ${@bank_branch_code},
                                                       p_bank_account_code => ${@bank_account_code},
                                                       p_line_number => ${@line_number},
									                   p_bank_code => ${@bank_code},
									                   p_bank_name => ${@bank_name},
									                   p_bank_location_code => ${@bank_location_code},
									                   p_bank_location => ${@bank_location},
									                   p_province_code => ${@province_code},
									                   p_province_name => ${@province_name},
									                   p_city_code => ${@city_code},
									                   p_city_name => ${@city_name},
									                   p_notes => ${@notes},
									                   p_primary_flag => ${@primary_flag},
                                                       p_enabled_flag=>${@enabled_flag},
                                                       p_last_update_by => ${/session/@user_id});
              end;               
       
        ]]></bm:update-sql>
        </bm:operation>
        <bm:operation name="delete">
            <bm:update-sql><![CDATA[
        
        begin

  ord_system_customers_pkg.delete_company_cus_bank_inf(p_information_id => ${@information_id},
                                                       p_last_update_by => ${/session/@user_id});
end;
        ]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
