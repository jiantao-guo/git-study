<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[select v.description,v.type_id,v.payment_method,cpmv.payment_method_id,cpmv.description payment_method_desc
            from csh_pay_req_types_vl v,csh_payment_methods_vl cpmv where exists (select *
             from csh_pay_ref_user_groups cpr
            where cpr.type_id =
                  v.type_id
              and exists (select 1
                     from exp_user_group_lines el
                    where el.expense_user_group_id =
                          cpr.expense_user_group_id
                      and el.employee_id = ${@employee_id}))
              and v.company_id = ${/session/@company_id} 
              and v.enabled_flag = 'Y'
              and v.payment_method = cpmv.payment_method_code(+)]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="type_id" queryExpression="v.type_id = ${@type_id}"/>
    </bm:query-fields>
</bm:model>
