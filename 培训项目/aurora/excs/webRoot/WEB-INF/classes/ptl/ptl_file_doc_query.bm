<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    w.attachment_id
                FROM
                    ptl_doc_word w
                WHERE
                    w.doc_id      = ${@doc_id} AND
                    ${@file_type} = 'WORD'
                UNION ALL
                SELECT
                    e.attachment_id
                FROM
                    ptl_doc_excel e
                WHERE
                    e.doc_id      = ${@doc_id} AND
                    ${@file_type} = 'EXCEL'
                UNION ALL
                SELECT
                    e.attachment_id
                FROM
                    ptl_doc_PPT e
                WHERE
                    e.doc_id      = ${@doc_id} AND
                    ${@file_type} = 'PPT'
                UNION ALL
                SELECT
                    e.attachment_id
                FROM
                    ptl_doc_PDF e
                WHERE
                    e.doc_id      = ${@doc_id} AND
                    ${@file_type} = 'PDF'
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
