<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    (SELECT
                        ee.name
                    FROM
                        exp_employees ee
                    WHERE
                        ee.employee_id =
                        (SELECT employee_id FROM sys_user su WHERE su.user_id = ${/session/@user_id}
                        )
                    ) AS announce_employee_name,
                    (SELECT
                        ee.employee_id
                    FROM
                        exp_employees ee
                    WHERE
                        ee.employee_id =
                        (SELECT employee_id FROM sys_user su WHERE su.user_id = ${/session/@user_id}
                        )
                    ) AS announce_employee_id,
                    (SELECT TO_CHAR(sysdate, 'YYYY-MM-DD') FROM dual
                    ) AS announce_date,
                    'WORD' AS doc_category,
                    (SELECT
                        code_value_name
                    FROM
                        sys_code_values_v v
                    WHERE
                        v.code       = 'PTL_DOC_CATEGORY' AND
                        v.code_value = 'WORD'
                    ) AS doc_category_desc,
                    'NORMAL' AS importance_level,
                    (SELECT
                        code_value_name
                    FROM
                        sys_code_values_v v
                    WHERE
                        v.code       = 'PTL_ANNOUNCEMENT_IMPORTANCE_LEVEL' AND
                        v.code_value = 'NORMAL'
                    ) AS importance_level_desc,
                    1 AS version
                FROM
                    dual
            ]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter inputPath="/session/@user_id"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
</bm:model>
