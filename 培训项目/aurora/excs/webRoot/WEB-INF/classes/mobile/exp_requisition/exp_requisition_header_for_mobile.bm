<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
            select h.exp_requisition_header_id head_id,
			       h.company_id,
				   (select company_short_name
          			  from fnd_companies_vl fv
         			 where fv.company_id = h.company_id) company_name,
         		   h.unit_id,
         		   (select eu.description
			          from exp_org_unit_vl eu
			         where eu.unit_id = h.unit_id) unit_name, 
			       h.exp_requisition_number,
			       h.exp_requisition_barcode,
			       h.payee_category,
			       (select code_value_name
			          from sys_codes_vl sc, sys_code_values_v sv
			         where sc.code = 'PAYMENT_OBJECT'
			           and sc.code_id = sv.code_id
			           and sv.code_value = h.payee_category) payee_category_name,
			       h.payee_id,
			       to_char(h.requisition_date, 'yyyy-mm-dd') requisition_date,
			       h.exp_requisition_type_id,
			       (select v.budget_control_enabled
			          from exp_expense_req_types_vl v
			         where v.expense_requisition_type_id = h.exp_requisition_type_id) budget_control_enabled,
			       (select v.report_name
			          from exp_expense_req_types_vl v
			         where v.expense_requisition_type_id = h.exp_requisition_type_id) report_name,
			       h.currency_code,
			       (select fd.CURRENCY_NAME
			          from gld_currency_vl fd
			         where fd.currency_code = h.currency_code) as currency_name,
			       h.exchange_rate_type,
			       (select ge.type_name
			          from gld_exchangerate_types_vl ge
			         where ge.type_code = h.exchange_rate_type) as exchange_rate_type_name,
			       (select v.code_value_name
			          from sys_codes c, sys_code_values_v v
			         where c.code_id = v.code_id
			           and c.code = 'EXCHANGE_RATE_QUOTATION'
			           and v.code_value = 'h.exchange_rate_quotation') as exc_rate_quo_display,
			       h.exchange_rate_quotation,
			       h.exchange_rate,
			       h.requisition_status,
			       h.attachment_num attachment,
			       h.description,
			       h.employee_id,
			       h.position_id,
			       (select position_code || ' - ' || description
			          from exp_org_position_vl v
			         where v.position_id = h.position_id) position_id_display,
			       (select description
			          from exp_expense_req_types_vl
			         where expense_requisition_type_id = h.exp_requisition_type_id) exp_requisition_type_name,
			       h.period_name,
			       decode(payee_category,
			              'EMPLOYEE',
			              (select employee_code || ' - ' || name
			                 from exp_employees ee
			                where ee.employee_id = h.payee_id),
			              'CUSTOMER',
			              (select vc.customer_code || ' - ' || vc.description
			                 from ord_system_customers_vl vc
			                where vc.customer_id = h.payee_id),
			              (select vv.vender_code || ' - ' || vv.description
			                 from pur_system_venders_vl vv
			                where vv.vender_id = h.payee_id)) payee_code,
			       (select employee_code || ' - ' || name
			          from exp_employees ees
			         where ees.employee_id = h.employee_id) employee_name,
			       (select employee_code || ' - ' || name
			          from exp_employees ees
			         where ees.employee_id =
			               (select employee_id
			                  from sys_user su
			                 where su.user_id = h.created_by)) created_by
			  from exp_requisition_headers h
			 where h.exp_requisition_header_id = ${@doc_head_id}
			]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
