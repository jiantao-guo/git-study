<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:ns2="aurora.database.local.oracle" xmlns:bm="http://www.aurora-framework.org/schema/bm" xmlns:f="aurora.database.features" alias="fc" baseTable="sys_alert_rule_job_details">
    <bm:query-fields><![CDATA[
    ]]></bm:query-fields>
    <bm:operations>
        <bm:operation name="update">
            <bm:parameters>
                <bm:parameter name="job_code_id" dataType="java.lang.Long"/>
                <bm:parameter name="next_date" dataType="java.lang.String" required="true"/>
            </bm:parameters>
            <bm:update-sql><![CDATA[
                begin
                    sys_alert_rules_pkg.save_sys_alert_rule_job_dtls
                    (
                        ${@job_code_id},
                        ${@hour},
                        ${@minute},
                        ${@second},
                        ${@one_time_flag},
                        ${/session/@user_id},
                        to_date(${@next_date}, 'yyyy-mm-dd hh24:mi:ss')
                    );
                end;
            ]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
