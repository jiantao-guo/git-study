<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                select *
				  from (select s.id,
				               s.attach_field_name,
				               s.attach_field,
				               s.notax_amount,
				               s.tax_amount,
				               s.attach_field line_num
				          from vat_rpt_input_structures s
				         where s.seller_id = ${@seller_id}
				           and s.year = ${@year}
				           and s.attach_field = 1
				        union all
				        select null id,
				               '一、按税率或征收率归集（不包括购建不动产、通行费）的进项' attach_field_name,
				               null attach_field,
				               null notax_amount,
				               null tax_amount,
				               1.5 line_num
				          from dual
				        union all
				        select s.id,
				               s.attach_field_name,
				               s.attach_field,
				               s.notax_amount,
				               s.tax_amount,
				               s.attach_field line_num
				          from vat_rpt_input_structures s
				         where s.seller_id = ${@seller_id}
				           and s.year = ${@year}
				           and s.attach_field between 2 and 28
				        union all
				        select null id,
				               '二、按抵扣项目归集的进项' attach_field_name,
				               null attach_field,
				               null notax_amount,
				               null tax_amount,
				               28.5 line_num
				          from dual
				        union all
				        select s.id,
				               s.attach_field_name,
				               s.attach_field,
				               s.notax_amount,
				               s.tax_amount,
				               s.attach_field line_num
				          from vat_rpt_input_structures s
				         where s.seller_id = ${@seller_id}
				           and s.year = ${@year}
				           and s.attach_field between 29 and 32) r
				 order by r.line_num
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="id"/>
        <bm:field name="attach_field_name"/>
        <bm:field name="attach_field"/>
        <bm:field name="notax_amount"/>
        <bm:field name="tax_amount"/>
    </bm:fields>
</bm:model>
