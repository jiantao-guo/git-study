<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
            select * from (      
            select t.responsibility_center_id center_id,
            t.responsibility_center_code center_code,
            t.responsibility_center_name  center_id_display    
            from fnd_responsibility_centers_vl t    
            where nvl(t.summary_flag,'N') ='N'    
            and (sysdate between t.start_date_active 
            and t.end_date_active or t.end_date_active is null)    
            and t.company_id = nvl(${/parameter/@company_id},${/session/@company_id})) v         
            #WHERE_CLAUSE# 
            order by center_code
            ]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter inputPath="/parameter/@company_id"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="center_code" displayWidth="150" forDisplay="true" forQuery="true" prompt="BGT_BUDGET_ITEM_MAPPING.RESPONSIBILITY_CENTER_CODE"/>
        <bm:field name="center_id"/>
        <bm:field name="center_id_display" displayWidth="240" forDisplay="true" forQuery="true" prompt="FND_RESPONSIBILITY_CENTERS.RESPONSIBILITY_CENTER_NAME_ID"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field field="center_code" queryOperator="like"/>
        <bm:query-field field="center_id_display" queryOperator="like"/>
    </bm:query-fields>
</bm:model>
