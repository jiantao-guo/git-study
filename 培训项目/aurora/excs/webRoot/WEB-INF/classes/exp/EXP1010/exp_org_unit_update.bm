<ns1:model xmlns:ns2="aurora.database.local.oracle" xmlns:ns1="http://www.aurora-framework.org/schema/bm">
    <ns1:operations>
        <ns1:operation name="insert">
            <ns1:update-sql><![CDATA[
                begin
                  wfl_pinyin_for_query_pkg.delete_unit_of_chi_py(${@description_id},
                                                           		 ${/session/@lang});
                  		  exp_org_unit_pkg.insert_org_unit(${@unit_code},
                                                           ${@org_unit_description},
                                                           ${/session/@company_id},
                                                           ${@responsibility_center_id},
                                                           ${@parent_unit_id},
                                                           ${@operate_unit_id},
                                                           nvl(${@enabled_flag},'n'),
                                                           ${/session/@user_id},
                                                           ${@chief_position_id},
                                                           ${@org_unit_level_id},
                                                           ${@unit_type_id},
                                                           ${/session/@lang},
                                                           ${@leader_employee_id},
                                                           ${@edit_flag},
                                                           ${@first_unit_code},
                                                           ${@first_unit_name},
                                                           ${@leader_position_id},
                                                           ${@budget_position_id},
                                                           ${@attend_position_id});   
                         
				  wfl_pinyin_for_query_pkg.insert_wfl_word_of_chi_py(p_name             => ${@org_unit_description},
						                                         	 p_user_id          => ${/session/@user_id});
                                                            
                end;
            ]]></ns1:update-sql>
        </ns1:operation>
        <ns1:operation name="update">
            <ns1:update-sql><![CDATA[
                begin
                  wfl_pinyin_for_query_pkg.delete_unit_of_chi_py(${@description_id},
                                                           		 ${/session/@lang});
                          exp_org_unit_pkg.update_org_unit1(${@unit_code},
                                                           ${@org_unit_description},
                                                           ${/session/@company_id},
                                                           ${@responsibility_center_id},
                                                           ${@parent_unit_id},
                                                           ${@operate_unit_id},
                                                           nvl(${@enabled_flag},'n'),
                                                           ${/session/@user_id},
                                                           ${@chief_position_id},
                                                           ${@org_unit_level_id},
                                                           ${@unit_type_id},
                                                           ${/session/@lang},
                                                           ${@leader_employee_id},
                                                           ${@first_unit_code},
                                                           ${@first_unit_name},
                                                           ${@leader_position_id},
                                                           ${@budget_position_id},
                                                           ${@attend_position_id});    
                                 
				  wfl_pinyin_for_query_pkg.insert_wfl_word_of_chi_py(p_name             => ${@org_unit_description},
						                                         	 p_user_id          => ${/session/@user_id});
                                                            
                end;
            ]]></ns1:update-sql>
        </ns1:operation>
    </ns1:operations>
</ns1:model>
