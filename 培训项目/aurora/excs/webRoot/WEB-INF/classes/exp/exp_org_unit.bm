<bm:model xmlns:ns2="aurora.database.local.oracle" xmlns:bm="http://www.aurora-framework.org/schema/bm" xmlns:f="aurora.database.features" alias="eou" baseTable="EXP_ORG_UNIT">
    <bm:fields>
        <bm:field name="unit_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="unit_code" databaseType="VARCHAR2" datatype="java.lang.String" forDisplay="true" forQuery="true" prompt="EXP_ORG_UNIT.UNIT_CODE"/>
        <bm:field name="description_id" databaseType="NUMBER" datatype="java.lang.Long" multiLanguage="true" multiLanguageDescField="org_unit_description"/>
        <bm:field name="org_unit_description" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="220" forDisplay="true" forInsert="false" forQuery="true" forUpdate="false" prompt="EXP_ORG_UNIT.ORG_UNIT_DESCRIPTION"/>
        <bm:field name="company_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="responsibility_center_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="responsibility_center_name" expression="(select v.responsibility_center_name from fnd_responsibility_centers_vl v where v.responsibility_center_id=eou.responsibility_center_id)"/>
        <bm:field name="parent_unit_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="enabled_flag" databaseType="VARCHAR2" datatype="java.lang.String"/>
        <bm:field name="operate_unit_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="chief_position_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="org_unit_level_id" databaseType="NUMBER" datatype="java.lang.Long"/>
        <bm:field name="unit_code_name" expression="(select description_text from fnd_descriptions fd where fd.description_id = eou.description_id and fd.language = ${/session/@lang})" forInsert="false" forUpdate="false"/>
    </bm:fields>
    <bm:primary-key>
        <bm:pk-field name="unit_id"/>
    </bm:primary-key>
    <bm:query-fields>
        <bm:query-field name="unit_code" queryExpression="(eou.unit_code like &apos;%&apos;||${@unit_code}||&apos;%&apos; or exists (select 1 from fnd_descriptions fd where eou.description_id=fd.description_id and fd.description_text like &apos;%&apos;||${@unit_code}||&apos;%&apos; and fd.language = ${/session/@lang}))"/>
        <bm:query-field name="org_unit_description" queryExpression="exists (select 1 from fnd_descriptions fd where eou.description_id=fd.description_id and fd.description_text like &apos;%&apos;||${@org_unit_description}||&apos;%&apos; and fd.language = ${/session/@lang})"/>
        <bm:query-field field="enabled_flag" queryOperator="="/>
        <bm:query-field field="company_id" queryOperator="="/>
        <bm:query-field name="responsibility_center_id" queryExpression="exists(select 1 from fnd_responsibility_centers f where f.company_id = ${@company_id} and f.responsibility_center_id = eou.responsibility_center_id )"/>
        <bm:query-field name="unit_code_name" queryExpression="(eou.unit_code like &apos;%&apos;||${@unit_code_name}||&apos;%&apos; or exists (select 1 from fnd_descriptions fd where eou.description_id=fd.description_id and fd.description_text like &apos;%&apos;||${@unit_code_name}||&apos;%&apos; and fd.language = ${/session/@lang}))"/>
        <!-- 过滤责任中心为空的部门 -->
        <bm:query-field name="resp_filter" queryExpression="responsibility_center_id is not null"/>
    </bm:query-fields>
    <bm:features>
        <ns2:sequence-pk/>
        <f:standard-who/>
        <f:multi-language-storage/>
    </bm:features>
    <bm:ref-fields/>
    <bm:data-filters>
        <bm:data-filter name="company_filter" enforceOperations="query" expression="eou.company_id=${@company_id}"/>
        <bm:data-filter name="unit_filter" enforceOperations="query" expression="1 = (case when nvl(${@unit_flag},&apos;Y&apos;)=&apos;Y&apos; then (select 1 from dual) else (select 1 from dual where exists(SELECT 1               FROM exp_employee_assigns sa,    exp_employees ee,  exp_org_unit_vl      eu,                    exp_org_position_vl  ep              WHERE sa.employee_id = ee.employee_id                AND sa.company_id = ${/session/@company_id}                AND sa.primary_position_flag = &apos;Y&apos;                AND eu.unit_id = ep.unit_id                AND sa.position_id = ep.position_id                AND eu.unit_id=eou.unit_id)) end)"/>
    </bm:data-filters>
</bm:model>
