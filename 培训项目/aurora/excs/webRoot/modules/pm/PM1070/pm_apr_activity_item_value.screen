<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view package="aurora.ui.std" template="default">
        <a:link id="pm_apr_activity_item_ele_value_link" url="${/request/@context_path}/modules/pm/PM1070/pm_apr_activity_itm_ele_value.screen"/>
        <script><![CDATA[
	function returnFunction(){
	    $('activity_item_value_window').close();
	}
	
	function resultDetailRender(value,record, name){
	    var activity_id = record.get('activity_id');
	    var position_id = record.get('position_id');
	    var item_id = record.get('item_id');
	    var employee_id	= record.get('employee_id');
        if(!activity_id){
        	return '';
        }
	    return '<a href=\'javascript:item_ele_link('+activity_id+','+position_id+','+item_id+','+employee_id+');\'>' + '${l:PROMPT.DETAIL}' + '</a>';
	}
	function item_ele_link(activity_id,position_id,item_id,employee_id){
	    new Aurora.Window({id:'activity_item_ele_value_window', url:$('pm_apr_activity_item_ele_value_link').getUrl()+"?activity_id="+activity_id+"&employee_id="+employee_id+"&item_id="+item_id+"&position_id="+position_id, title:'${l:PM_APR_ACTIVITY.ACTIVITY_DETAIL_SHOW}', height:500,width:750});
	}
]]></script>
        <a:dataSets>
            <a:dataSet id="activity_item_value_ds" autoQuery="true" queryUrl="${/request/@context_path}/autocrud/pm.PM1070.pm_apr_activity_item_employee_value/query?activity_id=${/parameter/@activity_id}&amp;employee_id=${/parameter/@employee_id}">
                <a:fields>
                    <a:field name="employee_code" readOnly="true"/>
                    <a:field name="employee_name" readOnly="true"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="activity_item_value_grid_ds" autoQuery="true" queryUrl="${/request/@context_path}/autocrud/pm.PM1070.pm_apr_activity_item_value/query?activity_id=${/parameter/@activity_id}&amp;employee_id=${/parameter/@employee_id}" selectable="true"/>
        </a:dataSets>
        <a:screenBody>
            <a:form column="2" title="PM_APR_ACTIVITY.ACTIVITY_DETAIL_SHOW" width="730">
                <a:textField name="employee_code" bindTarget="activity_item_value_ds" prompt="PM_APR_ACTIVITY_RESULT_QUERY.EMPLOY_CODE"/>
                <a:textField name="employee_name" bindTarget="activity_item_value_ds" prompt="PM_APR_ACTIVITY_RESULT_QUERY.NAME"/>
            </a:form>
            <a:button click="returnFunction" text="PROMPT.RETURN"/>
            <a:grid bindTarget="activity_item_value_grid_ds" height="350" navBar="true" width="730">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="activity_name" prompt="PM_APR_ACTIVITY.ACTIVITY_NAME" width="90"/>
                    <a:column name="position_name" prompt="EXP_EMPLOYEE_ASSIGNS.POSITION_ID" width="180"/>
                    <a:column name="item_description" prompt="PM_APR_ITEM" width="180"/>
                    <a:column name="value" prompt="PM_APR_ACTIVITY.ITEM_VALUE"/>
                    <a:column name="score" prompt="PM_APR_ACTIVITY.ITEM_SCORE"/>
                    <a:column align="center" prompt="PROMPT.DETAIL" renderer="resultDetailRender" width="50"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
