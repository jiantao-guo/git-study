        <script><![CDATA[ 
         function RP1010_InitSize() {
                    //描述宽度
                    var labelWidth = 75;
                    //标签宽度,5 = 3padding + 2border-spacing
                    var tagWidth = 150 + 5;
                    //页面宽度、高度
                    var vw = $A.getViewportWidth();
                    var vh = $A.getViewportHeight();
                    //留白宽度
                    var marginWidth = 35;
                    //自适应宽度
                    var autoWidth = vw - marginWidth;
                    //Form内部宽度，-2border
                    var formInnerWidth = autoWidth - 2;
                    //所占列数
                    var colSpan = 4;
                    //设置组件的自适应宽度
                    Ext.get('rpt_common_report_query_form').setWidth(autoWidth + 4); 
                }
                //Ext.fly(window).on('resize', RP1010_InitSize);
                RP1010_InitSize();
                     
         function init(){
                var record=$('rpt_all_company_query_ds').getCurrentRecord();
                record.set('company_id','${/session/@company_id}');
                record.set('company_id_display','${/model/rpt_current_company/record/@code_name}');
         }
         init();
        ]]></script>
