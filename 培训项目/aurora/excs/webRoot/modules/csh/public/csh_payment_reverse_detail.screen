        <script purpose="auto_resize"><![CDATA[
            function cshPayReverseDetailInitSize() {
                //描述宽度
            　　    var labelWidth = 75;
            　　    //标签宽度,5 = 3padding + 2border-spacing
            　　    var tagWidth = 150 + 5;
            　　    //页面宽度、高度
            　　    var vw = $A.getViewportWidth();
            　　    var vh = $A.getViewportHeight();
            　　    //留白宽度
            　　    var marginWidth = 35;
            　　    //自适应宽度
            　　    var autoWidth = vw - marginWidth;
            　　    //Form内部宽度，-2border
            　　    var formInnerWidth = autoWidth - 2;
            　　    //所占列数
            　　    var colSpan = 4;
            　　    //设置组件的自适应宽度
            　　    Ext.get('csh_pay_reverse_detail_head_form').setWidth(autoWidth + 4);
            	   Ext.get('csh_pay_reverse_detail_fieldset').setWidth(autoWidth-15); 
            	   //Ext.get('csh_payment_detail_fin_grid').setWidth(autoWidth-19);       
            	   //$('exp_requestion_duplication_grid').setWidth(autoWidth);           
            }
            //Ext.fly(window).on('resize', cshPayReverseDetailInitSize);
            cshPayReverseDetailInitSize();
            
            doQuery();
        ]]></script>
