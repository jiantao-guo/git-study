    $Purpose: 预付款余额查询,本期核销页面
-->
<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure/>
    <a:view>
        <a:link id="csh_payment_transaction_detail_link_2" url="${/request/@context_path}/modules/csh/public/csh_payment_transaction_detail.screen"/>
        <div/>
        <script><![CDATA[
        	function closeWindow(){
        		$('csh_periodwriteoff_window').close();
        	}
        	
        	function prepmtDetail(){
        		var records = $('csh_prepmt_balance_period_write_off_detail_result_ds').getSelected();
				if(records.length != 1){
					Aurora.showMessage('${l:PROMPT}','${l:CHOOSE_ONE_RECORD}');
				    return;
				}
				
				new Aurora.Window({id:'csh_payment_transaction_detail_window', 
        						   url:/*csh_payment_transaction_detail.screen*/$('csh_payment_transaction_detail_link_2').getUrl()+'?transaction_header_id=' + records[0].get('transaction_header_id'), 
        						   title:'${l:CSH_PREPAYMENT_BALANCE_OPENNING_DETAIL.PREPAYMENTDETAIL}', 
        					       fullScreen:true});    
        	}
        	
        ]]></script>
        <a:dataSets>
            <a:dataSet id="csh_prepmt_balance_query_one_ds" loadData="true" model="csh.csh_prepayment_balance_query"/>
            <a:dataSet id="csh_prepmt_balance_date_one_ds" autoCreate="true">
                <a:fields>
                    <a:field name="date_from" defaultValue="${/parameter/@date_from}" readOnly="true"/>
                    <a:field name="date_to" defaultValue="${/parameter/@date_to}" readOnly="true"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="csh_prepmt_balance_period_write_off_detail_result_ds" autoPageSize="true" autoQuery="true" fetchAll="false" model="csh.CSH3050.csh_prepmt_balance_period_write_off_detail" queryUrl="${/request/@context_path}/autocrud/csh.CSH3050.csh_prepmt_balance_period_write_off_detail/query?partner_category=${/parameter/@partner_category}&amp;partner_id=${/parameter/@partner_id}&amp;currency_code=${/parameter/@currency_code}&amp;transaction_class_code=${/paremeter/@transaction_class_code}&amp;employee_id=${/parameter/@employee_id}&amp;company_id=${/parameter/@company_id}" selectable="true" selectionModel="single"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:toolbarButton click="prepmtDetail" text="CSH_PREPAYMENT_BALANCE_OPENNING_DETAIL.PREPAYMENTDETAIL" width="80"/>
                <a:toolbarButton click="closeWindow" text="PROMPT.RETURN" width="80"/>
            </a:screenTopToolbar>
            <a:form id="csh_prepmt_balance_period_write_off_detail_form" column="1" title="CSH_PREPAYMENT_BALANCE_QUERY.TITLE">
                <a:box column="3" style="width:100;">
                    <a:textField name="date_from" bindTarget="csh_prepmt_balance_date_one_ds" prompt="CSH_CASH_PLAN_LINES.DATE_FROM"/>
                    <a:textField name="date_to" bindTarget="csh_prepmt_balance_date_one_ds" prompt="CSH_CASH_PLAN_LINES.DATE_TO"/>
                    <a:textField name="currency_name" bindTarget="csh_prepmt_balance_query_one_ds" prompt="CSH_PAYMENT_REQUISITION_HDS.CURRENCY_CODE" readOnly="true"/>
                    <a:textField name="partner_category_name" bindTarget="csh_prepmt_balance_query_one_ds" prompt="CSH_PREPAYMENT_BALANCE_QUERY.PARTNER_CATEGORY" readOnly="true"/>
                    <a:textField name="partner_code" bindTarget="csh_prepmt_balance_query_one_ds" prompt="CSH_PAYMENT_REQUISITION_HDS.PARTNER_ID" readOnly="true"/>
                    <a:textField name="partner_name" bindTarget="csh_prepmt_balance_query_one_ds" prompt="CSH_PREPAYMENT_BALANCE_QUERY.PARTNER_NAME" readOnly="true"/>
                </a:box>
            </a:form>
            <!-- <a:hBox>
                <a:button click="prepmtDetail" text="CSH_PREPAYMENT_BALANCE_OPENNING_DETAIL.PREPAYMENTDETAIL"/>
                <a:button click="closeWindow" text="PROMPT.RETURN"/>
            </a:hBox> -->
            <a:grid id="csh_prepmt_balance_period_write_off_detail_grid" bindTarget="csh_prepmt_balance_period_write_off_detail_result_ds" marginHeight="204" navBar="true">
                <a:columns>
                    <a:column name="transaction_type" align="left" prompt="CSH_PREPAYMENT_BALANCE_OPENNING_DETAIL.TRANSACTION_TYPE" width="60"/>
                    <a:column name="transaction_num" align="left" prompt="CSH_PREPAYMENT_WRITE_OFF.TRANSACTION_NUM" width="120"/>
                    <a:column name="currency_code" align="left" prompt="CSH_PAYMENT.CURRENCY_CODE" width="80"/>
                    <a:column name="transaction_date" align="center" prompt="CSH_PAYMENT_REQUISITION_HDS.REQUISITION_PAYMENT_DATE" width="100"/>
                    <a:column name="bank_account_code" align="center" prompt="CSH_BANK_BRANCHES.ACCOUNT" width="80"/>
                    <a:column name="bank_account_name" align="left" prompt="CSH_PAYMENT.BANK_ACCOUNT_NAME" width="200"/>
                    <a:column name="prepayment_amount" align="right" prompt="CSH_PREPAYMENT_BALANCE_OPENNING_DETAIL.PREPAYMENT_AMOUNT" renderer="Aurora.formatMoney" width="100"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
        <script purpose="auto_resize"><![CDATA[
            function csh_prepmt_balance_period_write_off_detailInitSize() {
                //描述宽度
                var labelWidth = 75;
                //标签宽度,5 = 3padding + 2border-spacing
                var tagWidth = 150 + 5;
                //页面宽度、高度
                var vw = $A.getViewportWidth();
                var vh = $A.getViewportHeight();
                //留白宽度
                var marginWidth = 35 ;
                //自适应宽度
                var autoWidth = vw - marginWidth;
                //Form内部宽度，-2border
                var formInnerWidth = autoWidth - 2;
                //所占列数
                var colSpan = 4;
                //设置组件的自适应宽度
                Ext.get('csh_prepmt_balance_period_write_off_detail_form').setWidth(autoWidth + 4);
                $('csh_prepmt_balance_period_write_off_detail_grid').setWidth(autoWidth);
                //设置TextArea的自适应宽度,别问我最后那个6是哪里来的，试出来的
            }
            //Ext.fly(window).on('resize', csh_prepmt_balance_period_write_off_detailInitSize);
            csh_prepmt_balance_period_write_off_detailInitSize();]]></script>
    </a:view>
</a:screen>
