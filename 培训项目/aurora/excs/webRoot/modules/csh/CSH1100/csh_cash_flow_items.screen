<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <a:model-query autoCount="false" fetchAll="true" model="gld.gld_set_of_books_of_sessioncompany" rootPath="set_of_book"/>
    </a:init-procedure>
    <a:view>
        <a:link id="csh_cash_flow_item_default_account_link" url="${/request/@context_path}/modules/csh/CSH1100/csh_cash_flow_item_default_account.screen"/>
        <a:link id="csh_cash_flow_item_formula_link" url="${/request/@context_path}/modules/csh/CSH1100/csh_cash_flow_item_formula.screen"/>
        <a:link id="csh_cash_flow_item_account_link" url="${/request/@context_path}/modules/csh/CSH1100/csh_cash_flow_item_account.screen"/>
        <div/>
        <script><![CDATA[
            
            function cashFlowItemTypeEdit(record,name){
                if(record.isNew){
                	return 'cash_flow_line_number_nf';
                }
                return '';
            }
            
            function cash_accounts(){
            	new Aurora.Window({id:'cash_accounts_window', url:/*csh_cash_flow_item_account.screen*/$('csh_cash_flow_item_account_link').getUrl(), title:'${l:CSH_CASH_FLOW_ITEMS.CASH_ACCOUNTS}',fullScreen:true});
            }
            
            function formula(){
            	
            	var records = $('csh_cash_flow_items_result_ds').getSelected();  
				if(records.length != 1){
					Aurora.showMessage('${l:PROMPT}','${l:CHOOSE_ONE_RECORD}');
				}else{
					var record = records[0];
					if(record.get('cash_flow_item_id'))
            			new Aurora.Window({id:'csh_cash_formula_window', url:/*csh_cash_flow_item_formula.screen*/$('csh_cash_flow_item_formula_link').getUrl()+'?cash_flow_item_id=' + record.get('cash_flow_item_id'), title:'${l:CSH_CASH_FLOW_ITEMS.FORMULA}',fullScreen:true});
				}            	
            }
            
            function account(){
                var records = $('csh_cash_flow_items_result_ds').getSelected();
                if(records.length != 1){
                	Aurora.showMessage('${l:PROMPT}','${l:CHOOSE_ONE_RECORD}');
                }else{
                	var record = records[0];
                	if(record.get('cash_flow_item_id'))
            			new Aurora.Window({id:'csh_cash_default_window', url:/*csh_cash_flow_item_default_account.screen*/$('csh_cash_flow_item_default_account_link').getUrl()+'?cash_flow_item_id=' + record.get('cash_flow_item_id'), title:'${l:CSH_CASH_FLOW_ITEMS.ACCOUNT}', fullScreen:true});                
                }
            	
            }
            
            function selectRecord(ds,record){
            	//获取行属性
            	var cash_flow_item_type = record.get('cash_flow_item_type');
            	
            	//获取公式定义的按钮
            	var formula_btn = $('formula');
            	
            	//属性为'公式'
            	if(cash_flow_item_type == 'FORMULA'){
					formula_btn.enable();
            	}else{
            		formula_btn.disable();
            	}
            	
            	 	
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="set_of_book_tf">
                <a:datas dataSource="/model/set_of_book"/>
            </a:dataSet>
            <a:dataSet id="csh_cash_flow_item_type" lookupCode="CSH_CASH_FLOW_ITEM_TYPE"/>
            <a:dataSet id="csh_cash_flow_orientation" lookupCode="CSH_CASH_FLOW_ORIENTATION"/>
            <!-- <a:dataSet id="csh_cash_flow_items_query_ds" autoCreate="true">
                <a:fields>
                    <a:field name="cash_flow_line_number" defaultValue="${/model/set_of_book/record/@set_of_books_code}" readonly="true"/>
                    <a:field name="description" defaultValue="${/model/set_of_book/record/@set_of_books_name}" readonly="true"/>
                </a:fields>
            </a:dataSet> -->
            <!-- <a:dataSet id="csh_cash_flow_items_result_ds" autoPageSize="true" autoQuery="true" fetchAll="false" model="csh.CSH1100.csh_cash_flow_items_query" queryDataSet="csh_cash_flow_items_query_ds" selectable="true" selectionModel="true" submitUrl="${/request/@context_path}/autocrud/csh.CSH1100.csh_cash_flow_items_save/batch_update"> -->
            <a:dataSet id="csh_cash_flow_items_result_ds" autoPageSize="true" autoQuery="true" fetchAll="false" model="csh.CSH1100.csh_cash_flow_items_query" selectable="true" selectionModel="true" submitUrl="${/request/@context_path}/autocrud/csh.CSH1100.csh_cash_flow_items_save/batch_update">
                <a:fields>
                    <a:field name="cash_flow_line_number" required="true"/>
                    <a:field name="description" required="true"/>
                    <a:field name="cash_flow_item_type_desc" displayField="code_value_name" options="csh_cash_flow_item_type" required="true" returnField="cash_flow_item_type" valueField="code_value"/>
                    <a:field name="indent" required="true"/>
                    <a:field name="orientation_desc" displayField="code_value_name" options="csh_cash_flow_orientation" returnField="orientation" valueField="code_value"/>
                    <a:field name="visible_flag" checkedValue="Y" defaultValue="Y" unCheckedValue="N"/>
                    <a:field name="set_of_books_id" defaultValue="${/model/set_of_book/record/@set_of_books_id}"/>
                </a:fields>
                <a:events>
                    <a:event name="select" handler="selectRecord"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton bind="csh_cash_flow_items_grid" type="add" width="80"/>
                <a:gridButton bind="csh_cash_flow_items_grid" type="save" width="80"/>
                <a:gridButton bind="csh_cash_flow_items_grid" type="clear" width="80"/>
                <a:toolbarButton id="formula" click="formula" text="CSH_CASH_FLOW_ITEMS.FORMULA" width="80"/>
                <a:toolbarButton id="cash_accounts" click="cash_accounts" text="CSH_CASH_FLOW_ITEMS.CASH_ACCOUNTS" width="120"/>
                <a:toolbarButton id="account" click="account" text="CSH_CASH_FLOW_ITEMS.ACCOUNT" width="120"/>
            </a:screenTopToolbar>
            <!--改为系统级-->
            <!-- <a:form id="csh_cash_flow_items_form" column="2" title="CSH_CASH_FLOW_ITEMS.TITLE" width="600">
                <a:textField name="cash_flow_line_number" bindTarget="csh_cash_flow_items_query_ds" prompt="FND_COMPANIES.SET_OF_BOOKS_ID" width="150"/>
                <a:textField name="description" bindTarget="csh_cash_flow_items_query_ds" prompt="CSH_CASH_FLOW_ITEMS.DESCRIPTION" width="150"/>
            </a:form> -->
            <!-- <a:hBox>
                <a:button id="cash_accounts" click="cash_accounts" text="CSH_CASH_FLOW_ITEMS.CASH_ACCOUNTS" width="100"/>
                <a:button id="formula" click="formula" text="CSH_CASH_FLOW_ITEMS.FORMULA" width="100"/>
                <a:button id="account" click="account" text="CSH_CASH_FLOW_ITEMS.ACCOUNT" width="100"/>
            </a:hBox> -->
            <a:grid id="csh_cash_flow_items_grid" bindTarget="csh_cash_flow_items_result_ds" marginHeight="100" marginWidth="50" navBar="true">
                <!-- <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="clear"/>
                    <a:button type="save"/>
                </a:toolBar> -->
                <a:columns>
                    <a:column name="cash_flow_line_number" align="center" editorFunction="cashFlowItemTypeEdit" width="80"/>
                    <a:column name="description" editor="description_tf" width="150"/>
                    <a:column name="cash_flow_item_type_desc" align="left" editor="cash_flow_item_type_cb" prompt="CSH_CASH_FLOW_ITEMS.CASH_FLOW_ITEM_TYPE" sortable="true" width="120"/>
                    <a:column name="indent" align="right" editor="indent_tf" width="100"/>
                    <a:column name="orientation_desc" align="center" editor="orientation_cb" prompt="CSH_CASH_FLOW_ITEMS.ORIENTATION" sortable="true" width="80"/>
                    <a:column name="visible_flag" align="center" editor="visible_flag_ckb" sortable="false" width="50"/>
                </a:columns>
                <a:editors>
                    <a:numberField id="cash_flow_line_number_nf" allowDecimals="false" allowFormat="false"/>
                    <a:textField id="description_tf"/>
                    <a:comboBox id="cash_flow_item_type_cb"/>
                    <a:numberField id="indent_tf" allowDecimals="false" allowFormat="false"/>
                    <a:comboBox id="orientation_cb"/>
                    <a:checkBox id="visible_flag_ckb"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
        <script purpose="auto_resize"><![CDATA[
            function CshCashFlowItemsInitSize() {
                //描述宽度
                var labelWidth = 75;
                //标签宽度,5 = 3padding + 2border-spacing
                var tagWidth = 150 + 5;
                //页面宽度、高度
                var vw = $A.getViewportWidth();
                var vh = $A.getViewportHeight();
                //留白宽度
                var marginWidth = 35 ;
                //自适应宽度
                var autoWidth = vw - marginWidth;
                //设置组件的自适应宽度
                // Ext.get('csh_cash_flow_items_form').setWidth(autoWidth + 4);
                $('csh_cash_flow_items_grid').setWidth(autoWidth);
            }
            //Ext.fly(window).on('resize', CshCashFlowItemsInitSize);
            CshCashFlowItemsInitSize();]]></script>
    </a:view>
</a:screen>
