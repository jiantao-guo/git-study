<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure>
        <a:model-query model="csh.CSH3300.csh_cash_plan_template" rootPath="csh_cash_plan_template_code"/>
        <a:model-query model="csh.CSH3300.csh_cash_plan_types" rootPath="csh_cash_plan_types_code"/>
        <a:model-query model="csh.CSH3300.csh_cash_plan_period_year" rootPath="period_year_code"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
    		function onUpdateHandler(dataSet, record, name, value, oldvalue) {
			    switch(name) {
			        case 'period_year':
			        	record.set('period_name', null);
			        	if(!value) {
			        	    record.getMeta().getField('period_name').setReadOnly(true);
			        	} else {
			        	    record.getMeta().getField('period_name').setReadOnly(false);
			        	    $('period_name_ds').setQueryParameter('period_year', value);
			        	    $('period_name_ds').query();
			        	}
			    }
    		}
    		
    		function query(){
    		    $('csh_cash_plan_result_ds').query();
    		}
    		
    		function reset(){
    		    $('csh_cash_plan_query_ds').reset();
    		}
    		
    		function CellRender(value, record, name){
    		   return '<a href="javascript:viewDetial('+record.get('cash_plan_header_id')+');">'+value+'</a>';
    		}
    		
    		function viewDetial(value){
    		    var url = 'csh_cash_plan_query_detial.screen?cash_plan_header_id='+value;
    		    new Aurora.Window({
    		        url: url,
    		        title: '',
    		        width: 830,
    		        height: 600
    		    });
    		    //window.open(url);
    		}
    	]]></script>
        <a:dataSets>
            <!--资金计划模版DataSet-->
            <a:dataSet id="template_code_ds">
                <a:datas dataSource="csh_cash_plan_template_code"/>
            </a:dataSet>
            <!--资金计划类型DataSet-->
            <a:dataSet id="plan_types_ds">
                <a:datas dataSource="csh_cash_plan_types_code"/>
            </a:dataSet>
            <!--年度DataSet-->
            <a:dataSet id="period_year_ds" fetchAll="true">
                <a:datas dataSource="period_year_code"/>
            </a:dataSet>
            <!--期间DataSet-->
            <a:dataSet id="period_name_ds" fetchAll="true" model="csh.CSH3300.csh_cash_plan_period" queryDataSet="period_year_ds"/>
            <!--状态DataSet-->
            <a:dataSet id="status_ds" lookupCode="CASH_PLAN_STATUS"/>
            <!--\\\\\\\\\\\\\\\\\\/////////////////-->
            <!--Form DataSet-->
            <a:dataSet id="csh_cash_plan_query_ds">
                <a:fields>
                    <a:field name="cash_plan_structure_id"/>
                    <a:field name="cash_plan_structure_id_display" displayField="cash_plan_structure_desc" options="template_code_ds" returnField="cash_plan_structure_id" valueField="cash_plan_structure_id"/>
                    <a:field name="cash_plan_type_id"/>
                    <a:field name="cash_plan_type_id_display" displayField="cash_plan_type_desc" options="plan_types_ds" returnField="cash_plan_type_id" valueField="cash_plan_type_id"/>
                    <a:field name="period_year" displayField="period_year" options="period_year_ds" returnField="period_year" valueField="period_year"/>
                    <a:field name="period_name" displayField="period_name" options="period_name_ds" returnField="period_name" valueField="period_name"/>
                    <a:field name="status"/>
                    <a:field name="status_display" displayField="code_value_name" options="status_ds" returnField="status" valueField="code_value"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="onUpdateHandler"/>
                </a:events>
            </a:dataSet>
            <!--grid DataSet-->
            <a:dataSet id="csh_cash_plan_result_ds" autoPageSize="true" autoQuery="false" model="csh.CSH3300.csh_cash_plan_query" queryDataSet="csh_cash_plan_query_ds" selectable="true"/>
        </a:dataSets>
        <a:screenBody>
            <a:form column="3" labelWidth="100" title="CSH_CASH_PLAN_QUERY.CASH_PLAN_QUERY" width="800">
                <a:textField name="cash_plan_number" bindTarget="csh_cash_plan_query_ds" prompt="CSH_CASH_PLAN_HEADERS.CASH_PLAN_NUMBER" width="120"/>
                <a:textField name="cash_plan_description" bindTarget="csh_cash_plan_query_ds" prompt="CSH_CASH_PLAN_HEADERS.CASH_DESCRIPTION" width="120"/>
                <a:comboBox name="cash_plan_structure_id_display" bindTarget="csh_cash_plan_query_ds" prompt="CASH_PLAN_STRUCTURE" width="120"/>
                <a:comboBox name="cash_plan_type_id_display" bindTarget="csh_cash_plan_query_ds" prompt="CSH_CASH_PLAN_INTERFACE.CASH_PLAN_TYPE_ID" width="120"/>
                <a:comboBox name="period_year" bindTarget="csh_cash_plan_query_ds" prompt="CSH_CASH_PLAN_INTERFACE.YEAR" width="120"><![CDATA[
                ]]></a:comboBox>
                <a:comboBox name="period_name" bindTarget="csh_cash_plan_query_ds" prompt="CSH_CASH_PLAN_INTERFACE.PERIOD_NAME" readOnly="true" width="120"/>
                <a:comboBox name="status_display" bindTarget="csh_cash_plan_query_ds" prompt="CSH_PAYABLE_BILLS.STATUS" width="120"/>
            </a:form>
            <a:hBox>
                <a:button click="query" text="HAP_QUERY"/>
                <a:button click="reset" text="HAP_RESET"/>
            </a:hBox>
            <a:form padding="0" showMargin="false" title=" ">
                <a:grid bindTarget="csh_cash_plan_result_ds" height="400" navBar="true" style="border: none;" width="1050">
                    <a:columns>
                        <a:column name="cash_plan_number" align="center" prompt="CSH_CASH_PLAN_HEADERS.CASH_PLAN_NUMBER" renderer="CellRender" width="100"/>
                        <a:column name="cash_plan_description" prompt="CSH_CASH_PLAN_HEADERS.CASH_DESCRIPTION" width="120"/>
                        <a:column name="period_year" align="center" prompt="CSH_CASH_PLAN_INTERFACE.YEAR" width="80"/>
                        <a:column name="cash_plan_structure" prompt="CASH_PLAN_STRUCTURE" width="100"/>
                        <a:column name="cash_plan_type" prompt="CSH_CASH_PLAN_INTERFACE.CASH_PLAN_TYPE_ID" width="100"/>
                        <a:column name="period_name" align="center" prompt="CSH_CASH_PLAN_INTERFACE.PERIOD_NAME" width="80"/>
                        <a:column name="notes" prompt="CSH_CASH_PLAN_INTERFACE.CASH_PLAN_DESCRIPTION" width="120"/>
                        <a:column name="status_desc" align="center" prompt="CSH_PAYABLE_BILLS.STATUS" width="80"/>
                        <a:column name="created_by" align="center" prompt="CSH_CASH_PLAN_INTERFACE.CREATED_BY" width="100"/>
                        <a:column name="creation_date" align="center" prompt="WFL_WORKFLOW_MESSAGE.CREATION_DATE" width="120"/>
                    </a:columns>
                </a:grid>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
