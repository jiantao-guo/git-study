                        </a:mapping>
                    </a:field>
                    <a:field name="employee_id" defaultValue="${/model/employee/record/@employee_id}" prompt="CON_CONTRACT_HEADERS.EMPLOYEE_ID"/>
                    <a:field name="version_number" defaultValue="1" prompt="CON_CONTRACT_HEADERS.VERSION_NUMBER"/>
