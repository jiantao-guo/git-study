                    </a:field>
                    <a:field name="status" prompt="CON_CONTRACT_HEADERS.CONTRACT_STATUS"/>
                    <a:field name="start_date" defaultValue="${/model/sysdate/record/@now}" prompt="CON_CONTRACT_HEADERS.START_DATE"/>
