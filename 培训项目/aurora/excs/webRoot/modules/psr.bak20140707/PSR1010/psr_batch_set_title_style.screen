                    </a:field>
                    <a:field name="rightbordercolor" defaultValue="ROYAL_BLUE" lovGridHeight="320" lovHeight="450" lovUrl="${/request/@context_path}/modules/psr/PSR1010/psr_color_lookup_code.screen" lovWidth="400" prompt="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE" title="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE">
                        <a:mapping>
                            <a:map from="color_name" to="rightbordercolor"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="topbordercolor" defaultValue="ROYAL_BLUE" lovGridHeight="320" lovHeight="450" lovUrl="${/request/@context_path}/modules/psr/PSR1010/psr_color_lookup_code.screen" lovWidth="400" prompt="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE" title="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE">
