                    </a:field>
                    <a:field name="pattern" defaultValue="SOLID_FOREGROUND" lovGridHeight="320" lovHeight="450" lovUrl="${/request/@context_path}/modules/psr/PSR1010/psr_padding_pattern.screen" lovWidth="400" prompt="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE" title="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE">
