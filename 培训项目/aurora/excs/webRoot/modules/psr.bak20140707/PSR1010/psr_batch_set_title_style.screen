                        </a:mapping>
                    </a:field>
                    <a:field name="borderbottom" defaultValue="BORDER_NONE" lovGridHeight="320" lovHeight="450" lovUrl="${/request/@context_path}/modules/psr/PSR1010/psr_border_style.screen" lovWidth="400" prompt="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE" title="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE">
                        <a:mapping>
                            <a:map from="border_name" to="borderbottom"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="bordertop" defaultValue="BORDER_NONE" lovGridHeight="320" lovHeight="450" lovUrl="${/request/@context_path}/modules/psr/PSR1010/psr_border_style.screen" lovWidth="400" prompt="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE" title="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE">
                        <a:mapping>
                            <a:map from="border_name" to="bordertop"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="bottombordercolor" defaultValue="ROYAL_BLUE" lovGridHeight="320" lovHeight="450" lovUrl="${/request/@context_path}/modules/psr/PSR1010/psr_color_lookup_code.screen" lovWidth="400" prompt="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE" title="RPT_REPORT_SHEET_COLUMNS.CELL_STYLE">
                        <a:mapping>
                            <a:map from="color_name" to="bottombordercolor"/>
