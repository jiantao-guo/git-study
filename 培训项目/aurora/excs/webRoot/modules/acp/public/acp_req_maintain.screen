                var head_id = '${/parameter/@acp_requisition_header_id}';
                var line_record = $('pmtplan_schedules_ds').getAll();
            
                if (line_record.length > 0) {
                    Aurora.request({
                        url: '${/request/@context_path}/autocrud/acp.acp_req_submit/update',
                        para: {
