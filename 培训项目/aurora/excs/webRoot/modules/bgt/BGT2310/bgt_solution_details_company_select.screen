<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <a:link id="bgt_solution_details_company_select_control_link" url="${/request/@context_path}/modules/bgt/BGT2310/bgt_solution_details_company_select_control.svc"/>
        <script><![CDATA[
			function querybtn(){
				$('bgt_solution_details_company_query_result_ds').query();
			}
			
			function resetbtn(){
				$('bgt_solution_details_company_query_query_ds').reset();
			}
			function savebtn(){
				var data =[];
	            var records = $('bgt_solution_details_company_select_query_ds').getAll();
	            for (var i=0;i<records.length;i++){
					data.push(records[i].data);
	            }
	            
				var formData = {
					'bgt_solution_header_id': '${/parameter/@bgt_solution_header_id}'
				};
				
				formData['details']=data;
	            Aurora.request({
	            	url:/*bgt_solution_details_company_select_control.svc*/$('bgt_solution_details_company_select_control_link').getUrl(),
	            	para:formData,
	            	success:dispatch,
	            	scope:this
	            });
			}
			function dispatch(){
				var records = $('bgt_solution_details_company_select_query_ds').getAll();
				var resultds = $('parameter_value_select_ds').getAll();
				if('${/session/@lang}' == 'ZHS'){
					resultds[0].set('parameter_value_select','你已选择'+records.length+'条数据');
				}
				else{
					resultds[0].set('parameter_value_select','You have selected '+records.length+' datas');
				}
				$('${/parameter/@lovid}').commit(resultds[0]);
			}
			function moveright(){
				var rightds = $('bgt_solution_details_company_select_query_ds');
				var leftds = $('bgt_solution_details_company_query_result_ds');
				var leftrecords = leftds.getSelected();
				var rightAll = rightds.getAll();
				for(var i=0; i<leftrecords.length;){
					var record = leftrecords[i];
					var flag = 0 ;
					for(var j=0;j<rightAll.length;j++){
						if(rightAll[j].get('company_code') == record.get('company_code')){
							flag = 1;
							break;
						}
					}	
					rightds.add(record);	
					leftds.remove(record);
					if(flag == 1){
						rightds.remove(record);
					}
				}
			}
			
			function moveleft(){
				var rightds = $('bgt_solution_details_company_select_query_ds');
				var leftds = $('bgt_solution_details_company_query_result_ds');
				var leftAll = leftds.getAll();
				var rightrecords = rightds.getSelected();
				for(var i=0; i<rightrecords.length;){
					var record = rightrecords[i];
					var flag = 0;
					for(var j=0;j<leftAll.length;j++){
						if(leftAll[j].get('company_code') == record.get('company_code')){
							flag = 1;
							break;
						}
					}
					leftds.add(record);
					rightds.remove(record);
					if(flag == 1){
						leftds.remove(record);
					}
				} 
			}
			
		]]></script>
        <a:dataSets>
            <a:dataSet id="bgt_solution_details_company_query_query_ds" model="bgt.BGT2310.bgt_solution_details_company_query">
                <a:fields>
                    <a:field name="company_code"/>
                    <a:field name="company_name"/>
                    <a:field name="company_code_from"/>
                    <a:field name="company_code_to"/>
                    <a:field name="bgt_solution_header_id" defaultValue="${/parameter/@bgt_solution_header_id}"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="bgt_solution_details_company_query_result_ds" fetchAll="true" model="bgt.BGT2310.bgt_solution_details_company_query" queryDataSet="bgt_solution_details_company_query_query_ds" selectable="true"/>
            <a:dataSet id="bgt_solution_details_company_select_query_ds" autoQuery="true" fetchAll="true" model="bgt.BGT2310.bgt_solution_details_company_select_query" queryUrl="${/request/@context_path}/autocrud/bgt.BGT2310.bgt_solution_details_company_select_query/query?bgt_solution_header_id=${/parameter/@bgt_solution_header_id}" selectable="true"/>
            <a:dataSet id="parameter_value_select_ds" autoCreate="true">
                <a:fields>
                    <a:field name="parameter_value_select"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:form title="COMPANY_SELECTED">
                <a:hBox>
                    <a:textField name="company_code" bindTarget="bgt_solution_details_company_query_query_ds" prompt="COMPANY_CODE"/>
                    <a:textField name="company_name" bindTarget="bgt_solution_details_company_query_query_ds" prompt="BGT_COMPANY_PERIOD_SETS.COMPANY_FULL_NAME"/>
                </a:hBox>
                <a:hBox>
                    <a:textField name="company_code_from" bindTarget="bgt_solution_details_company_query_query_ds" prompt="FND_COMPANIES.COMPANY_CODE_FROM"/>
                    <a:textField name="company_code_to" bindTarget="bgt_solution_details_company_query_query_ds" prompt="FND_COMPANIES.COMPANY_CODE_TO"/>
                </a:hBox>
            </a:form>
            <a:hBox>
                <a:button click="querybtn" text="PROMPT.QUERY"/>
                <a:button click="resetbtn" text="PROMPT.RESET"/>
                <a:button click="savebtn" text="PROMPT.OK"/>
            </a:hBox>
            <a:hBox>
                <a:vBox>
                    <a:grid bindTarget="bgt_solution_details_company_query_result_ds" height="330" width="330">
                        <a:columns>
                            <a:column name="company_code" prompt="COMPANY_CODE" width="100"/>
                            <a:column name="company_short_name" prompt="BGT_COMPANY_PERIOD_SETS.COMPANY_FULL_NAME" width="170"/>
                        </a:columns>
                    </a:grid>
                </a:vBox>
                <a:vBox height="150">
                    <a:button click="moveright" text="&gt;&gt;"/>
                    <a:button click="moveleft" text="&lt;&lt;"/>
                </a:vBox>
                <a:vBox>
                    <a:grid bindTarget="bgt_solution_details_company_select_query_ds" height="330" width="330">
                        <a:columns>
                            <a:column name="company_code" prompt="COMPANY_CODE" width="100"/>
                            <a:column name="company_short_name" prompt="BGT_COMPANY_PERIOD_SETS.COMPANY_FULL_NAME" width="170"/>
                        </a:columns>
                    </a:grid>
                </a:vBox>
            </a:hBox>
        </a:screenBody>
    </a:view>
</a:screen>
