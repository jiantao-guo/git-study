<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <a:model-query fetchall="true" model="bgt.bgt_org" rootpath="bgt_org"/>
        <a:model-query fetchall="true" model="bgt.BGT2020.bgt_budget_item_types_vl" rootpath="bgt_budget_item_types"/>
    </a:init-procedure>
    <a:view>
        <a:link id="bgt_budget_item_hierarchy_l_link" url="${/request/@context_path}/modules/bgt/BGT2020/bgt_budget_item_hierarchy_l.screen"/>
        <script><![CDATA[
    		function resetForm(){
    			$('bgt_item_hierarchy_query_ds').reset();
    		}
    		
    		function queryFunction(){
    			$('bgt_item_hierarchy_result_ds').query();
    		}
    		function loadFunction(ds,record,index){
    			
    				record.set("enabled_flag","Y");
    				record.set("summary_flag", "N");
    				record.set("budget_org_desc", "${/model/bgt_org/record/@description}");
    				record.set("budget_org_id", "${/model/bgt_org/record/@bgt_org_id}");
    				
    		}
    		
    		function renderFunction(value,record,name){
    			if (record.get("budget_item_id") !== -1) {
    				budget_item_id = record.get("budget_item_id");
					return "<a href = 'javascript:newWindowFunction(" + budget_item_id + ")'>" + "${l:BGT_HIERARCHY.SUB_ITEM}"  + "</a>"					
				}
    		}
    		function newWindowFunction(budget_item_id){
    			new Aurora.Window({id:'bgt_budget_item_hierarchy_sub_window',url:/*bgt_budget_item_hierarchy_l.screen*/$('bgt_budget_item_hierarchy_l_link').getUrl()+'?budget_item_id=' + budget_item_id,title:'${l:BGT_HIERARCHY.BUDGET_ITEM_SUB_ITEM}',height:480,width:620});
    		}
    	]]></script>
        <a:dataSets>
            <a:dataSet id="bgt_org_ds">
                <a:datas dataSource="/model/bgt_org"/>
                <a:fields/>
            </a:dataSet>
            <a:dataSet id="bgt_budget_description_ds">
                <a:datas dataSource="/model/bgt_budget_item_types"/>
            </a:dataSet>
            <a:dataSet id="bgt_item_hierarchy_query_ds">
                <a:fields>
                    <a:field name="budget_item_code" prompt="BGT_HIERARCHY.BUDGET_ITEM"/>
                    <a:field name="budget_type" autoComplete="true" autoCompleteField="description" lovService="bgt.bgt_budget_item_types" lovWidth="500" lovgridheight="320" lovheight="450" prompt="BGT_ITEM.BUDGET_ITEM_TYPE" title="BGT_ITEM.BUDGET_ITEM_TYPE">
                        <a:mapping>
                            <a:map from="description" to="budget_type"/>
                            <a:map from="budget_item_type_id" to="budget_item_type_id"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="budget_item_type_id"/>
                    <!--<a:field name="budget_type" displayField="description" options="bgt_budget_description_ds" prompt="BGT_ITEM.BUDGET_ITEM_TYPE" returnField="budget_item_type_id" valueField="budget_item_type_id"/>-->
                    <a:field name="budget_item_from" autoComplete="true" autoCompleteField="description" lovHeight="450" lovService="bgt.BGT2020.bgt_budget_item_code" lovWidth="500" lovgridheight="320" prompt="BGT_BUDGET_ITEMS.BUDGET_ITEM_CODE_FROM" title="BGT_BUDGET_ITEMS.BUDGET_ITEM_CODE_FROM">
                        <a:mapping>
                            <a:map from="budget_item_code" to="budget_item_from"/>
                            <a:map from="description" to="description_from"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="description_from" prompt="BGT_BUDGET_ITEMS.DECRIPTION" readOnly="true"/>
                    <a:field name="budget_item_to" autoComplete="true" autoCompleteField="description" lovHeight="450" lovService="bgt.BGT2020.bgt_budget_item_code" lovWidth="500" lovgridheight="320" prompt="BGT_BUDGET_ITEMS.BUDGET_ITEM_CODE_TO" title="BGT_BUDGET_ITEMS.BUDGET_ITEM_CODE_TO">
                        <a:mapping>
                            <a:map from="budget_item_code" to="budget_item_to"/>
                            <a:map from="description" to="description_to"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="description_to" prompt="BGT_BUDGET_ITEMS.DECRIPTION" readOnly="true"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="bgt_item_hierarchy_result_ds" autoQuery="true" canQuery="true" canSubmit="true" fetchAll="false" model="bgt.BGT2020.bgt_budget_item_hierarchy" autoPageSize="true" queryDataSet="bgt_item_hierarchy_query_ds">
                <a:events>
                    <a:event name="add" handler="loadFunction"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:toolbarButton click="resetForm" text="HAP_RESET" width="80"/>
            </a:screenTopToolbar>
            <a:queryForm bindTarget="bgt_item_hierarchy_query_ds" resultTarget="bgt_item_hierarchy_result_ds" style="width:100%;border:none">
                <a:formToolBar labelWidth="100">
					<a:textField name="budget_item_code" bindTarget="bgt_item_hierarchy_query_ds"/>
					<a:lov name="budget_type" bindTarget="bgt_item_hierarchy_query_ds"/>
                </a:formToolBar>
                <a:formBody column="4" labelWidth="100">
					<a:lov name="budget_item_from" bindTarget="bgt_item_hierarchy_query_ds"/>
					<a:textField name="description_from" bindtarget="bgt_item_hierarchy_query_ds"/>
					<a:lov name="budget_item_to" bindTarget="bgt_item_hierarchy_query_ds"/>
					<a:textField name="description_to" bindtarget="bgt_item_hierarchy_query_ds"/>
                </a:formBody>				
            </a:queryForm>		
			<a:grid id="grid" bindTarget="bgt_item_hierarchy_result_ds" marginHeight="121" marginWidth="45" navBar="true">
                <a:columns>
                    <a:column name="budget_org_desc" align="left" sortable="true" width="120"/>
                    <a:column name="budget_item_code" align="center" sortable="true" width="120"/>
                    <a:column name="description" align="left" width="150"/>
                    <a:column name="budget_item_type_code" align="center" width="120"/>
                    <a:column name="budget_item_type_desc" align="left" width="150"/>
                    <a:column name="subitems" align="center" prompt="BGT_HIERARCHY.SUB_ITEM" renderer="renderFunction" width="120"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
