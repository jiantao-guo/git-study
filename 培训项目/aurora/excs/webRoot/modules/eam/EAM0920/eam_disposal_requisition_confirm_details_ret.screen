        </a:dataSets>
        <a:screenBody>
            <!-- 申请头 -->
            <a:form column="1" title="资产处置申请确认" width="1024">
                <a:box column="4">
                    <a:textField name="requisition_number" bindTarget="req_form_ds" prompt="申请单号"/>
                    <a:textField name="req_status_desc" bindTarget="req_form_ds"/>
