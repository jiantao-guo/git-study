                                Aurora.showWarningMessage('${l:PROMPT}', '${l:PERIOD_NOT_OPEN_ERR}');
                                return;
                            }
                        },
                        scope: this
                    });
                }
            }
            
            //added by gaobo.wang 20130605 begin
