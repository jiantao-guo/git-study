                var requisition_header_id = '${/parameter/@requisition_header_id}';
                var asset_book_id = '${/model/eam0910_req_header/record/@asset_book_id}';
                var ast_requisition_type_id = '${/model/eam0910_req_header/record/@ast_requisition_type_id}';
            
