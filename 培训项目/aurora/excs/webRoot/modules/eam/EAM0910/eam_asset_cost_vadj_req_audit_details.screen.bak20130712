                    <a:field name="value_type" defaultValue="${/model/eam0910_req_header/record/@value_type}"/>
                    <a:field name="value_type_desc" defaultValue="${/model/eam0910_req_header/record/@value_type_desc}" prompt="EAM_VALUE_TYPE" readOnly="true"/>
                </a:fields>
            </a:dataSet>
            <!-- 申请行DS -->
            <a:dataSet id="eam0910_cost_vadj_req_audit_lines_ds" autoQuery="true" bindName="lines" bindTarget="eam0910_cost_vadj_req_audit_form_ds" queryUrl="${/request/@context_path}/autocrud/eam.eam0410.eam0410_requisition_lines_edit/query?requisition_header_id=${/parameter/@requisition_header_id}" selectable="true">
                <a:fields>
                    <a:field name="line_number" prompt="EXP_REPORT_LINES.LINE_NUMBER"/>
                    <a:field name="requisition_header_id" defaultValue="${/model/eam0910_req_header/record/@requisition_header_id}"/>
