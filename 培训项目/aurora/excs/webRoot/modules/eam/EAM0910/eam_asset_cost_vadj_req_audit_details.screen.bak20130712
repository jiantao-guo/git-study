                    <a:field name="employee_id" defaultValue="${/model/eam0910_req_header/record/@employee_id}"/>
                    <a:field name="position_id" defaultValue="${/model/eam0910_req_header/record/@position_id}"/>
                    <!-- <a:field name="user_group_id"/> -->
