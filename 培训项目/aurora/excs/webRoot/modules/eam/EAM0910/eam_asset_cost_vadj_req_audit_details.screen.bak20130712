                    <a:textField name="req_employee_name" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                    <a:comboBox name="org_position" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                    <a:textField name="employee_name" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                </a:hBox>
                <a:hBox width="730">
                    <a:textField name="requisition_number" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                    <a:textField name="asset_book_desc" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                    <a:textField name="requisition_type" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                </a:hBox>
                <a:hBox width="730">
                    <a:comboBox name="value_type_desc" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                    <a:datePicker name="requisition_date" bindTarget="eam0910_cost_vadj_req_audit_form_ds" style="float:left;margin-right: 10px;"/>
                    <a:textField name="req_status_desc" bindTarget="eam0910_cost_vadj_req_audit_form_ds"/>
                </a:hBox>
                <a:hBox width="730">
                    <a:textArea name="description" bindTarget="eam0910_cost_vadj_req_audit_form_ds" width="632"/>
                </a:hBox>
            </a:form>
            <a:hBox>
                <a:button click="eam0910_cost_vadj_approve" text="AUDIT_FLAG"/>
                <a:button click="eam0910_cost_vadj_reject" text="PROMPT.AUDIT_REJECT"/>
                <a:button click="eam0910_cost_vadj_history" text="REC_REQUISITION_HISTORY"/>
                <!-- <a:button click="eam0910_cost_vadj_backFun" text="HAP_BACK"/> -->
            </a:hBox>
            <a:grid bindTarget="eam0910_cost_vadj_req_audit_lines_ds" height="200" navBar="true" width="1000">
                <a:toolBar>
                    <a:label/>
                </a:toolBar>
                <a:columns>
                    <a:column name="line_number" align="center" width="50"/>
                    <a:column align="center" renderer="onCostSource" width="80"/>
                    <a:column name="asset_code" align="center" renderer="onOpenAsset"/>
                    <a:column name="asset_name" align="center" width="200"/>
                    <a:column name="current_cost" align="right" width="100"/>
                    <a:column name="accumulated_dep_amt" align="right" width="100"/>
                    <a:column name="impairment_loss_amt" align="right" width="100"/>
                    <a:column name="trans_type_desc" align="center" width="100"/>
                    <a:column name="value_adj_date" align="center" renderer="Aurora.formatDate" width="100"/>
                    <a:column name="pl_amount" align="right" width="100"/>
                    <a:column name="description" align="left" width="200"/>
                </a:columns>
            </a:grid>
            <a:tabPanel id="eam0910_tran_accounts_tab" height="300" style="display :none;" width="1000">
                <a:tabs>
                    <a:tab id="eam0910_cost_vadj_req_tra_acc_tab" prompt="EAM_ASSET_REQUISITION.WRITE_OFF_ACCOUNT" width="80">
                        <a:form column="1" height="20" labelWidth="100" width="890">
                            <a:box column="4">
                                <a:datePicker name="journal_date" bindTarget="eam0910_tran_acc_default_val_ds" renderer="Aurora.formatDate"/>
                                <a:textField name="currency_code" bindTarget="eam0910_tran_acc_default_val_ds"/>
                                <a:textField name="exchange_rate" bindTarget="eam0910_tran_acc_default_val_ds"/>
                                <a:button click="eam0910_cost_vadj_account" text="PROMPT.CREATE_JE"/>
                            </a:box>
                        </a:form>
                        <a:grid bindTarget="eam0910_cost_vadj_req_tra_acc_ds" height="220" navBar="true" width="990">
                            <a:toolBar>
                                <a:button type="add"/>
                                <a:button type="save"/>
                                <a:button type="delete"/>
                            </a:toolBar>
                            <a:columns>
                                <a:column name="description" align="left" editor="eam0910_desc_tf" width="200"/>
                                <a:column name="journal_date" align="left" renderer="Aurora.formatDate" width="80"/>
                                <a:column name="period_name" align="left" width="80"/>
                                <a:column name="company_desc" align="left" editor="eam0910_company_lv" width="100"/>
                                <a:column name="responsibility_center_desc" align="left" editor="eam0910_resp_lv" width="100"/>
                                <a:column name="account_desc" align="left" editor="eam0910_account_lv" width="100"/>
                                <a:column prompt="EAM_TRANSACTION_ACCOUNTS.ENTERED_AMOUNT">
                                    <a:column name="entered_amount_dr" editor="eam0910_amount_nf" width="75"/>
                                    <a:column name="entered_amount_cr" editor="eam0910_amount_nf" width="75"/>
                                </a:column>
                                <a:column prompt="EAM_TRANSACTION_ACCOUNTS.FUNCTIONAL_AMOUNT">
                                    <a:column name="functional_amount_dr" renderer="onRendererFun" width="75"/>
                                    <a:column name="functional_amount_cr" renderer="onRendererFun" width="75"/>
                                </a:column>
                            </a:columns>
                            <a:editors>
                                <a:textField id="eam0910_desc_tf"/>
                                <a:lov id="eam0910_account_lv"/>
                                <a:lov id="eam0910_company_lv"/>
                                <a:lov id="eam0910_resp_lv"/>
                                <a:numberField id="eam0910_amount_nf" allowDecimals="true" allowNegative="false" decimalPrecision="3"/>
                            </a:editors>
                            <a:events>
                                <a:event name="cellclick" handler="gridCellClick"/>
                            </a:events>
                        </a:grid>
                    </a:tab>
                    <a:tab id="eam0910_cost_vadj_req_tab" prompt="EAM_ASSET_REQUISITION.REF_DOCUMENT" width="80">
                        <!-- 单据关联 -->
                        <a:grid bindTarget="eam0910_document_release_ds" height="260" navBar="true" width="980">
                            <a:columns>
                                <a:column name="source_doc_cate_desc" align="center"/>
                                <a:column name="source_doc_desc" align="center" renderer="eamReqNumRenderer" width="160"/>
                                <a:column name="source_doc_line_desc" align="center" width="40"/>
                                <a:column name="req_project" align="center"/>
                                <a:column name="req_quantity" align="center"/>
                                <a:column name="req_amount" align="center"/>
                                <!-- <a:column name="release_quantity" align="center" editor="rec_req_quantity"/> -->
                                <a:column name="release_amount" align="center"/>
                                <a:column name="description" align="center" width="150"/>
                            </a:columns>
                        </a:grid>
                    </a:tab>
                </a:tabs>
            </a:tabPanel>
        </a:screenBody>
    </a:view>
</a:screen>
