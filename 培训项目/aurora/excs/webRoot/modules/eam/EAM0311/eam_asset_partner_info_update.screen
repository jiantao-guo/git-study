<a:screen xmlns:a="http://www.aurora-framework.org/application" >
    <a:init-procedure>
        <a:model-query autoCount="false" fetchAll="true" fieldNameCase="lower" model="eam.eam0810.eam0810_asset_partner_info_query" rootPath="partner_info"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
        	function onUpdateFun(dataSet, record, name, value) {
                var lovField;
                if (name == 'partner_category') {
                    var title = '';
                    record.getMeta().getField('partner_name').setReadOnly(false);
                    if (value == 'EMPLOYEE') {
                        title = '${l:EXP_EMPLOYEES.QUERY}';
                        record.getMeta().getField('partner_name').setLovService('eam.eam0810.eam0810_employee_lv');
                    }else if (value == 'CUSTOMER') {
                        title = '${l:CUSTOMER_QUERY}';
                        record.getMeta().getField('partner_name').setLovService('eam.eam0030.eam0030_exp_customer_req_lov');
                    }else if (value == 'VENDER') {
                        title = '${l:VENDER_SEARCH}';
                        record.getMeta().getField('partner_name').setLovService('eam.eam0030.eam0030_exp_vender_req_lov');
                    }else if (value == 'MANUFACTURER') {
                        title = '';
                        record.getMeta().getField('partner_name').setLovService('');
                    }
                    record.getMeta().getField('partner_name').setTitle(title);
                }
        	}
        	
        	function onEntityBeforeSubmitFun(ds) {
        	    
                var categories_result = $('eam0810_asset_management_result_ds');
                var categories_record = categories_result.getCurrentRecord();
                var asset_id = categories_record.get('asset_id');
                if (asset_id == ' ' || asset_id == null || asset_id == undefined) {
                    Aurora.showMessage('${l:PROMPT}', '${l:EAM_ASSET_PARTNER_INFO.DO_SAVE_EAM_ASSET_HEADERS}');
                    return false;
                }
                var result_ds = $('eam0810_eam_asset_partner_info_result_ds');
                if (result_ds.validate()) {
                    var records = result_ds.getAll();
                    if (records.length < 1) {
                        Aurora.showMessage('${l:PROMPT}', '${l:EAM_ASSET_PARTNER_INFO.ADD_DATA}');
                    } else {
                        for (var i = 0;i < records.length;i++) {
                            var record = records[i];
                            record.set('asset_id', asset_id);
                        }
                    }
                }
            }
            
            function init(){
                if($('eam0810_asset_management_result_ds').getCurrentRecord()){
                    if($('eam0810_asset_management_result_ds').getCurrentRecord().get('asset_id') != undefined && $('eam0810_asset_management_result_ds').getCurrentRecord().get('asset_id') != '' && $('eam0810_asset_management_result_ds').getCurrentRecord().get('asset_id') != null){
		        	    $('eam0810_eam_asset_partner_info_result_ds').setQueryParameter('asset_id',$('eam0810_asset_management_result_ds').getCurrentRecord().get('asset_id'));
		        	    $('eam0810_eam_asset_partner_info_result_ds').query();
                    }
                }
        	}
		]]></script>
        <a:dataSets>
            <a:dataSet id="eam0810_eam_partner_category_ds" lookupCode="EAM_PARTNER_CATEGORY"/>
            <a:dataSet id="eam0810_eam_asset_partner_info_result_ds" autoPageSize="true" bindName="partner_info" bindTarget="eam0810_asset_management_result_ds" model="eam.eam0810.eam0810_asset_partner_info_query" selectable="true" submitUrl="${/request/@context_path}/autocrud/eam.eam0810.eam0810_asset_partner_info_edit/batch_update">
                <a:datas dataSource="/model/partner_info"/>
                <a:fields>
                    <a:field name="asset_partner_id"/>
                    <a:field name="asset_id"/>
                    <a:field name="partner_category"/>
                    <a:field name="partner_category_desc" displayField="code_value_name" options="eam0810_eam_partner_category_ds" prompt="EAM_ASSET_PARTNER_INFO.PARTNER_CATEGORY" required="true" returnField="partner_category" valueField="code_value"/>
                    <a:field name="partner_id"/>
                    <a:field name="partner_name" fetchRemote="false" lovGridHeight="200" lovHeight="350" lovWidth="450" prompt="EAM_ASSET_PARTNER_INFO.PARTNER_NAME" readOnly="true">
                        <a:mapping>
                            <a:map from="id" to="partner_id"/>
                            <a:map from="code_name" to="partner_name"/>
                        </a:mapping>
                    </a:field>
                </a:fields>
                <a:events>
                    <!-- <a:event name="submitsuccess" handler="submit_success"/> -->
                    <a:event name="update" handler="onUpdateFun"/>
                    <a:event name="beforesubmit" handler="onEntityBeforeSubmitFun"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:grid bindTarget="eam0810_eam_asset_partner_info_result_ds" height="179" navBar="true" width="880">
                <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="save"/>
                    <a:button type="delete"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="partner_category_desc" align="center" editor="eam0810_partner_category_cmb" width="250"/>
                    <a:column name="partner_name" align="center" editor="eam0810_partner_name_lv" width="250"/>
                </a:columns>
                <a:editors>
                    <a:comboBox id="eam0810_partner_category_cmb"/>
                    <a:lov id="eam0810_partner_name_lv"/>
                </a:editors>
            </a:grid>
            <script><![CDATA[
        	init();
        ]]></script>
        </a:screenBody>
    </a:view>
</a:screen>
