            <a:dataSet id="eam_asset_fin_classes_ds" model="eam.eam0310.eam0310_asset_fin_classes"/>
            <a:dataSet id="eam_asset_query_ds">
                <a:fields>
                    <a:field name="category_id"/>
                    <a:field name="category_desc" displayField="description" options="eam_asset_category_ds" returnField="category_id" valueField="category_id"/>
                    <a:field name="finance_class_id"/>
                    <a:field name="finance_desc" displayField="description" options="eam_asset_fin_classes_ds" readOnly="true" returnField="finance_class_id" valueField="class_id"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="onQueryDsUpdate"/>
