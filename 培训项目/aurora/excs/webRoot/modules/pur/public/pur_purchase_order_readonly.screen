        <script><![CDATA[
        
          
        ]]></script>
    </a:view>
    <a:view-config>
        <c:batch-config xmlns:c="aurora.application.action" source="/model/head_dimension" targetId="dynamicHeadColumn">
            <a:label name="${@dimension_code_d}" bindTarget="pur_report_head_dimension"/>
        </c:batch-config>
        <c:create-config xmlns:c="aurora.application.action" targetId="dynamicHeadFields">
            <p:loop xmlns:p="uncertain.proc" source="/model/head_dimension">
                <c:process-config>
                    <a:field name="${@dimension_code_d}" defaultValue="${@value_description}" prompt="${@description}" readOnly="true"/>
                    <a:field name="${@dimension_code_e}" defaultValue="${@default_dim_value_id}"/>
                </c:process-config>
            </p:loop>
        </c:create-config>
        <c:batch-config xmlns:c="aurora.application.action" source="/model/head_object" targetId="dynamicHeadObject">
            <a:label name="${@expense_object_type_code}" bindTarget="pur_report_head_object"/>
        </c:batch-config>
        <c:create-config xmlns:c="aurora.application.action" targetId="refobjHeadFields">
            <p:loop xmlns:p="uncertain.proc" source="/model/head_object">
                <c:process-config>
                    <a:field name="${@expense_object_type_code}" defaultValue="${@default_object_desc}" prompt="${@description}" readOnly="true"/>
                    <a:field name="${@forname}" defaultValue="${@default_object_id}"/>
                </c:process-config>
            </p:loop>
        </c:create-config>
        <c:batch-config xmlns:c="aurora.application.action" source="/model/line_dimension" targetId="dynamicLineColumn">
            <a:label name="${@dimension_code_d}" bindTarget="pur_report_line_ds"/>
        </c:batch-config>
        <c:create-config xmlns:c="aurora.application.action" targetId="dynamicLineFields">
            <p:loop xmlns:p="uncertain.proc" source="/model/line_dimension">
                <c:process-config>
                    <a:field name="${@dimension_code_d}" defaultValue="${@value_description}" prompt="${@description}" readOnly="true"/>
                    <a:field name="${@dimension_code_e}" defaultValue="${@default_dim_value_id}"/>
                </c:process-config>
            </p:loop>
        </c:create-config>
        <c:batch-config xmlns:c="aurora.application.action" source="/model/line_object" targetId="dynamicLineColumnObj">
            <a:label name="${@expense_object_type_code}" bindTarget="pur_report_line_ds"/>
        </c:batch-config>
        <c:create-config xmlns:c="aurora.application.action" targetId="dynamicLineFieldsObj">
            <p:loop xmlns:p="uncertain.proc" source="/model/line_object">
                <c:process-config>
                    <a:field name="${@expense_object_type_code}" defaultValue="${@default_object_desc}" prompt="${@description}" readOnly="true"/>
                    <a:field name="${@forname}" defaultValue="${@default_object_id}"/>
                </c:process-config>
            </p:loop>
        </c:create-config>
    </a:view-config>
