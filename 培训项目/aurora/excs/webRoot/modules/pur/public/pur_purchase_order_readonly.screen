                    <a:column name="responsibility_center_code" prompt="BGT_BUDGET_ITEM_MAPPING.RESPONSIBILITY_CENTER" width="100"/>
                    <a:column name="unit_code" prompt="CON_CONTRACT_HEADERS.UNIT_ID" width="100"/>
