                $('ord_system_customers_assign_com_batch_hct_grid').setWidth(autoWidth);
            }
            //Ext.fly(window).on('resize', OrdSystemCustomersAssignComBatchHctInitSize);
            OrdSystemCustomersAssignComBatchHctInitSize();]]></script>
