<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
    
	]]></a:init-procedure>
    <a:view>
        <a:link id="ord_system_customers_assign_com_batch_control_hct_link" model="db.ord_system_customers_pkg.hct_batch_assign_com_customers" modelaction="update"/>
        <a:link id="ord_system_customers_assign_company_link" url="${/request/@context_path}/modules/fnd/FND2515/ord_system_customer_asign_com.svc"/>
        <script><![CDATA[
            function FND2515_saveFunction() {
                var records = $('ord_system_customers_assign_result_ds').getSelected();
                if (records.length < 1) {
                    Aurora.showMessage('${l:PROMPT}', '${l:PROMPT.PLEASE_SELECT}');
                    return false;
                }
                var datas = [];
                for (var i = 0;i < records.length;i++) {
                    records[i].set('customer_id', $('ord_system_customers_assign_header_ds').getAt(0).get('customer_id'));
                    var data = records[i].data;
                    datas.push(data);
                }
                Aurora.request({
                    url: $('ord_system_customers_assign_company_link').getUrl(),
                    para: datas,
                    success: FND2515_close_window,
                    scope: this
                });
            }
            
            function FND2515_close_window() {
                Aurora.showInfoMessage('${l:PROMPT}','${l:FND_CODING_RULE_DET.OPER_SUC}',null,250,100);
                $('ord_system_customers_assign_com_result_ds').query();
                $('ord_system_customers_assign_com_batch_hct_id').close();
            }
            
            function backFunction() {
                $('ord_system_customers_assign_com_batch_hct_id').close();
            }
            
            function FND2515_query_company() {
                $('ord_system_customers_assign_result_ds').query();
            }
            
            function FND2515_reset() {
                $('ord_system_customers_assign_header_ds').reset();
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="ord_system_customers_assign_header_ds" autoCreate="true">
                <a:fields>
                    <a:field name="company_code"/>
                    <a:field name="company_code_from_display" autoComplete="true" autoCompleteField="company_code_name" lovGridHeight="320" lovHeight="450" lovService="fnd.fnd_companies" lovWidth="500" title="FND_COMPANIES.COMPANY_FROM">
                        <a:mapping>
                            <a:map from="company_code_name" to="company_code_from_display"/>
                            <a:map from="company_code" to="company_code_from"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="company_code_to_display" autoComplete="true" autoCompleteField="company_code_name" lovGridHeight="320" lovHeight="450" lovService="fnd.fnd_companies" lovWidth="500" title="FND_COMPANIES.COMPANY_TO">
                        <a:mapping>
                            <a:map from="company_code_name" to="company_code_to_display"/>
                            <a:map from="company_code" to="company_code_to"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="customer_id" defaultValue="${/parameter/@customer_id}"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="ord_system_customers_assign_result_ds" autoPageSize="true" fetchAll="false" model="fnd.FND2515.ord_system_customers_assign_company" pageSize="10" queryDataSet="ord_system_customers_assign_header_ds" selectable="true"><![CDATA[
            ]]></a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <!-- <a:form title="PUR_BUYERS_COMPANY_ASSIGN.BATCH_COMPANY" width="550">
                <a:vBox>
                    <a:hBox>
                        <a:lov name="company_code_from_display" bindTarget="ord_system_customers_assign_header_ds" prompt="FND_COMPANIES.COMPANY_FROM"/>
                        <a:lov name="company_code_to_display" bindTarget="ord_system_customers_assign_header_ds" prompt="FND_COMPANIES.COMPANY_TO"/>
                    </a:hBox>
                </a:vBox>
            </a:form>
            <a:hBox>
                <a:button click="FND2515_query_company" text="HAP_QUERY"/>
                <a:button click="FND2515_reset" text="HAP_RESET"/>
            </a:hBox> -->
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:toolbarButton click="FND2515_reset" text="HAP_RESET" width="80"/>
                <a:toolbarButton click="FND2515_saveFunction" text="PUR_BUYERS_COMPANY_ASSIGN.ASSIGN" width="80"/>
            </a:screenTopToolbar>
            <a:queryForm bindTarget="ord_system_customers_assign_header_ds" resultTarget="ord_system_customers_assign_result_ds" style="width:100%;border:none">
                <a:formToolBar>
                    <a:lov name="company_code_from_display" bindTarget="ord_system_customers_assign_header_ds" prompt="FND_COMPANIES.COMPANY_FROM" width="200"/>
                    <a:lov name="company_code_to_display" bindTarget="ord_system_customers_assign_header_ds" prompt="FND_COMPANIES.COMPANY_TO" width="200"/>
                </a:formToolBar>
            </a:queryForm>
            <a:grid id="ord_system_customers_assign_com_batch_hct_grid" bindTarget="ord_system_customers_assign_result_ds" marginHeight="152" navBar="true">
                <!-- <a:toolBar>
                    <a:button click="FND2515_saveFunction" icon="${/request/@context_path}/images/save.gif" style="height:16px;" text="PUR_BUYERS_COMPANY_ASSIGN.ASSIGN"/>
                </a:toolBar> -->
                <a:columns>
                    <a:column name="company_code" align="center" prompt="COMPANY_CODE" width="80"/>
                    <a:column name="company_short_name" align="left" prompt="FND_COMPANIES.COMPANY_SHORT_NAME" width="120"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
        <script purpose="auto_resize"><![CDATA[
            function OrdSystemCustomersAssignComBatchHctInitSize() {
                //描述宽度
                var labelWidth = 75;
                //标签宽度,5 = 3padding + 2border-spacing
                var tagWidth = 150 + 5;
