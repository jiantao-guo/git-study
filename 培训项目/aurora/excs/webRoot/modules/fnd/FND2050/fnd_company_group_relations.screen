<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure/>
    <a:view>
        <script><![CDATA[
            function closeWindow() {
                $('fnd_company_group_relations_window').close();
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="company_group_relations_ds" autoCount="true" autoPageSize="true" autoQuery="true" fetchAll="false" model="fnd.FND2050.fnd_company_group_relations" queryUrl="${/request/@context_path}/autocrud/fnd.FND2050.fnd_company_group_relations/query?company_group_id=${/parameter/@company_group_id}" selectable="true">
                <a:fields>
                    <a:field name="company_short_name" autoComplete="true" autoCompleteField="code_name" lovGridHeight="320" lovHeight="450" lovService="fnd.fnd_company_all_lov" lovWidth="500" required="true" title="">
                        <a:mapping>
                            <a:map from="company_id" to="company_id"/>
                            <a:map from="company_code" to="company_code"/>
                            <a:map from="company_short_name" to="company_short_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="company_code"/>
                    <a:field name="company_id"/>
                    <a:field name="company_group_id" defaultValue="${/parameter/@company_group_id}"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:toolbarButton id="closeBtn" click="closeWindow" text="PROMPT.CLOSE" width="80"/>
                <a:gridButton bind="fnd_company_group_relations_grid" type="add" width="80"/>
                <a:gridButton bind="fnd_company_group_relations_grid" type="save" width="80"/>
                <a:gridButton bind="fnd_company_group_relations_grid" type="clear" width="80"/>
                <a:gridButton bind="fnd_company_group_relations_grid" type="delete" width="80"/>
            </a:screenTopToolbar>
            <a:form column="4" marginWidth="40" title="FND_COMPANY_GROUPS.COMPANY_GROUP_RELATIONS">
                <a:textField name="company_group_code" bindTarget="fnd_company_groups_result_ds" colspan="1" prompt="FND_COMPANY_GROUPS.COMPANY_GROUP_CODE" readOnly="true"/>
                <a:textField name="description" bindTarget="fnd_company_groups_result_ds" colspan="3" prompt="FND_COMPANY_GROUPS.DESCRIPTION_ID" readOnly="true"/>
            </a:form>
            <a:grid id="fnd_company_group_relations_grid" bindTarget="company_group_relations_ds" marginHeight="170" marginWidth="45" navBar="true">
                <a:columns>
                    <a:column name="company_short_name" align="left" editor="company_code_lov" prompt="FND_COMPANIES.COMPANY" width="120"/>
                    <a:column name="company_code" align="left" prompt="FND_COMPANIES.COMPANY_CODE" width="120"/>
                </a:columns>
                <a:editors>
                    <a:lov id="company_code_lov"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
