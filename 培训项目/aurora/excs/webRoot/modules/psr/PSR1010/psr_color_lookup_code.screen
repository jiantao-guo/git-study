<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <!-- <a:model-query autoCount="false" defaultwhereclause="report_type=&apos;CONDITION_REPORT&apos;" fetchAll="true" model="psr.PSR1010.psr_report_headers" rootPath="report_list"/> --><![CDATA[
        
        
        
        
        
    ]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
	function colorRenderer(value, record, name){
	    return '<img src="${/request/@context_path}/images/report_cell_style/'+value+'"/>';
	}

	function queryColorName(){
                $('psr_report_color_result_ds').query();
            }
            function resetColorName(){
            	$('psr_report_color_query_ds').reset();
            }
            
            function dblClick(grid,record,row){
               $('${/parameter/@lovid}').commit(record);
            }
	
]]></script>
        <a:dataSets>
            <a:dataSet id="psr_report_color_query_ds"/>
            <a:dataSet id="psr_report_color_result_ds" autoQuery="true" model="psr.PSR1010.psr_color_lookup_code" pageSize="10" queryDataSet="psr_report_color_query_ds"><![CDATA[
            
            ]]></a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:form column="2" title="颜色对照表" width="300">
                <a:textField name="color_name" bindTarget="psr_report_color_query_ds"/>
            </a:form>
            <a:hBox>
                <a:button click="queryColorName" text="HAP_QUERY"/>
                <a:button click="resetColorName" text="HAP_RESET"/>
            </a:hBox>
            <a:grid bindTarget="psr_report_color_result_ds" height="300" navBar="true" width="300">
                <a:columns>
                    <a:column name="color_name" align="left" prompt="颜色名" width="120"/>
                    <a:column name="color_code" align="left" prompt="图案" renderer="colorRenderer" width="100"/>
                </a:columns>
                <a:events>
                    <a:event name="dblclick" handler="dblClick"/>
                </a:events>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
