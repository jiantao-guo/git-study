<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <a:model-query autoCount="false" fetchAll="true" model="sys.SYS2860.sys_config_plan_graphics_main_query" rootPath="_graphics_main"/>
        <a:model-query autoCount="false" fetchAll="true" model="sys.SYS2860.sys_config_graphics_node_query" rootPath="_graphics_nodes"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
    		
    			function EXP2870_jumpServiceFun(obj,path,dataSet){
    			    
    			    if(dataSet){
    			        var record = dataSet.getCurrentRecord();
	    			    if(record.get('service_name')){
	    			        window.location.href = '${/request/@context_path}/' + record.get('service_name');
	    			    }
    			    }
    			}
    		
    	]]></script>
        <a:dataSets>
            <a:dataSet id="_graphics_preview_nodes_ds" autoCount="false" fetchAll="true" model="sys.SYS2860.sys_config_graphics_node_query">
                <a:datas dataSource="/model/_graphics_nodes"/>
                <a:fields>
                    <a:field name="type"/>
                    <a:field name="config"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:graphic id="_graphics_preview_main" bindTarget="_graphics_preview_nodes_ds" height="${/model/_graphics_main/record/@height}" style="border:1px solid #ccc" width="${/model/_graphics_main/record/@width}">
                <a:events>
                    <a:event name="click" handler="EXP2870_jumpServiceFun"/>
                </a:events>
            </a:graphic>
        </a:screenBody>
    </a:view>
</a:screen>
