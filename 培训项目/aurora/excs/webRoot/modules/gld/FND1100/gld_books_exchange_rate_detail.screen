<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <!--<a:model-query model="gld.gld_currency" rootpath="gld_ex_rate" fetchall="true" autocount="true" defaultwhereclause="currency_code=${/parameter/@currency_code}"/>--><![CDATA[
        
        
        
        
        
    ]]></a:init-procedure>
    <a:view>
        <a:link id="gld_exchange_rates_assign_com_link" url="${/request/@context_path}/modules/gld/FND1100/gld_books_assign_com.screen"/>
        <a:link id="gld_exchange_rates_batch_assign_com_link" url="${/request/@context_path}/modules/gld/FND1100/fnd_payment_customers_assign_com_batch_hct.screen"/>
        <script><![CDATA[
         
            //获取前一个页面的 rate_method_code 值，来决定此页面的显示列
            var mode='${/parameter/@rate_method_code}';

            function gridDataUpdate(ds,record,name,value){
                record.set('currency_code','${/parameter/@currency_code}');
                record.set('type_code','${/parameter/@type_code}');
            }
            
            function gridDataSubmitsuccess(dataset,res)
            {
             	//alert(dataset.getCurrentRecord().get('exchange_rate_id'));   
             	// $('gld_exchange_rate_detail_grid_ds').query();
             	dataset.query();
            }    

            //在添加数据时动态控制列的必填属性
            function gridDataAdd(ds,record,index){
                var dateField=record.getMeta().getField('conversion_date');
                var periodField=record.getMeta().getField('period_name');

                if (mode=='PERIOD'){
                    periodField.setRequired(true);
                }
                if (mode=='DAILY'){
                    dateField.setRequired(true);
                }
            }
			function FND1100_assignCompany(value,record,name)
			{
			    if(!record.isNew)
			    {
			        var url="<a href=javascript:FND1100_insert_gld_exchange_rates("+record.get('exchange_rate_id')+",'${/parameter/@currency_code}'"+",'${/parameter/@currency_name}'"+",${/parameter/@set_of_books_id}"+");>${l:GLD_BOOKS_EXCHANGE_RATAIL.ASSIGN_COM}</a>";
			    	return url;
			    }
			    else
			    {
			        return '';
			    }    
			}    
        	function FND1100_insert_gld_exchange_rates(p_exchange_rate_id,p_currency_code,p_currency_name,p_set_of_books_id)
        	{
        	    new Aurora.Window({
        	        id:'gld_exchange_rates_assign_com',
                    url:$('gld_exchange_rates_assign_com_link').getUrl()+'?p_exchange_rate_id='+p_exchange_rate_id+'&p_set_of_books_id='+p_set_of_books_id+'&currency_code='+p_currency_code+'&currency_name='+p_currency_name,
                    title:'${l:FND_SYSTEM_VENDERS.COMPANY_ASSIGN}',
                    fullScreen:true
        	    }); 
        		                       
        	}    
        	function FND1100_batch_assignCompany()
			{
			    var exchangeRate=$('gld_exchange_rate_detail_grid_ds').getSelected();
                if(exchangeRate.length == 0){
						Aurora.showInfoMessage('${l:PROMPT}','${l:PROMPT.SELECT_LINE_DATE}',null,250,100);
				        return ;				    
				} 
			     new Aurora.Window({
        	        id:'fnd_payment_customers_assign_com_id',
                    url:$('gld_exchange_rates_batch_assign_com_link').getUrl()+"?p_batch_flag=Y"+'&set_of_books_id=${/parameter/@set_of_books_id}&exchange_rate_id=-1',
                    fullScreen:true
        	    }); 
			}  
			
			function backFunction_create(){
             history.go(-1);
         } 
        ]]></script>
        <a:dataSets>
            <a:dataSet id="quotation_ds" lookupCode="EXCHANGE_RATE_QUOTATION"/>
            <a:dataSet id="gld_exchange_rate_detail_fs_ds" autocreate="true">
                <a:fields>
                    <a:field name="currency_code" defaultvalue="${/parameter/@currency_code}" readonly="true"/>
                    <a:field name="currency_name" defaultvalue="${/parameter/@currency_name}" readonly="true"/>
                    <a:field name="type_code" defaultValue="${/parameter/@type_code}" readonly="true"/>
                    <a:field name="method_name" defaultValue="${/parameter/@rate_method_code}" readonly="true"/>
                    <a:field name="currency_code_frn" defaultValue="${/parameter/@currency_code_frn}" readonly="true"/>
                    <a:field name="period_from" defaultValue="${/parameter/@period_from}" readonly="true"/>
                    <a:field name="period_to" defaultValue="${/parameter/@period_to}" readonly="true"/>
                    <a:field name="date_from" defaultValue="${/parameter/@date_from}" readonly="true"/>
                    <a:field name="date_to" defaultValue="${/parameter/@date_to}" readonly="true"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="gld_exchange_rate_detail_grid_ds" autoPageSize="true" autoQuery="true" fetchAll="false" model="gld.gld_exchange_rates_detail" queryDataSet="gld_exchange_rate_detail_fs_ds" queryUrl="${/request/@context_path}/autocrud/gld.FND1100.gld_books_exchange_rates/query?set_of_books_id=${/parameter/@set_of_books_id}&amp;ORDER_FIELD=to_currency" selectable="true" submitUrl="${/request/@context_path}/autocrud/gld.FND1100.gld_books_exchange_rates_update/batch_update">
                <a:fields>
                    <a:field name="exchange_rate_id"/>
                    <a:field name="to_currency" lovGridHeight="300" lovHeight="460" lovService="gld.gld_currency_lov?currency_code_frn=${/parameter/@currency_code}" lovWidth="490" required="true" title="GLD_EXCHANGE_RATES.TO_CURRENCY_CODE">
                        <a:mapping>
                            <a:map from="currency_code" to="to_currency"/>
                            <a:map from="currency_name" to="currency_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="quotation_display" displayField="code_value_name" options="quotation_ds" required="true" returnField="exchange_rate_quotation" valueField="code_value"/>
                    <a:field name="period_name" lovGridHeight="300" lovHeight="460" lovService="gld.gld_period_lov" lovWidth="490" title="GLD_EXCHANGE_RATE_DETAILS.PERIOD_NAME">
                        <a:mapping>
                            <a:map from="period_name" to="period_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="currency_volume" required="true"/>
                    <a:field name="conversion_rate" required="true"/>
                    <a:field name="set_of_books_id" defaultValue="${/parameter/@set_of_books_id}"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="gridDataUpdate"/>
                    <a:event name="submitsuccess" handler="gridDataSubmitsuccess"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:toolbarButton click="backFunction_create" text="HAP_BACK" width="80"/>
                <a:gridButton bind="gld_exchange_rate_gird" type="add" width="80"/>
                <a:gridButton bind="gld_exchange_rate_gird" type="save" width="80"/>
                <a:gridButton bind="gld_exchange_rate_gird" type="clear" width="80"/>
                <a:gridButton bind="gld_exchange_rate_gird" type="delete" width="80"/>
                <a:toolbarButton click="FND1100_batch_assignCompany" text="PROMPT.BATCH_DISP_COMPANY" width="100"/>
            </a:screenTopToolbar>
            <a:form id="gld_books_exchange_rate_detail_form" column="4" title="SET_OF_BOOK_LEVEL.EXCHANGE_RATE_DEFINE">
                <a:textField name="currency_code" bindTarget="gld_exchange_rate_detail_fs_ds" prompt="GLD_CURRENCY.CURRENCY_CODE"/>
                <a:textField name="currency_name" bindTarget="gld_exchange_rate_detail_fs_ds" prompt="GLD_CURRENCY.CURRENCY_NAME"/>
                <a:textField name="type_code" bindTarget="gld_exchange_rate_detail_fs_ds" prompt="GLD_EXCHANGERATE_TYPES.TYPE_CODE"/>
                <a:textField name="method_name" bindTarget="gld_exchange_rate_detail_fs_ds" prompt="GLD_EXCHANGE_RATE_DETAILS.EXCHANGE_TYPE"/>
            </a:form>
            <!-- <a:hBox>
                <a:button click="FND1100_batch_assignCompany" text="批量分配公司"/>
                <a:button click="backFunction_create" text="HAP_BACK"/>
            </a:hBox> -->
            <!-- -->
            <a:grid id="gld_exchange_rate_gird" bindTarget="gld_exchange_rate_detail_grid_ds" marginHeight="139" navBar="true">
                <!-- <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="delete"/>
                    <a:button type="save"/>
                    <a:button type="clear"/>
                </a:toolBar> -->
                <a:columns>
                    <a:column name="to_currency" align="center" editor="gerg_lov" prompt="GLD_EXCHANGE_RATES.TO_CURRENCY_CODE" sortable="true" width="80"/>
                    <a:column name="currency_name" align="left" prompt="GLD_CURRENCY.CURRENCY_NAME" width="120"/>
                    <a:column name="currency_volume" align="right" editor="gerg_nf" prompt="PROMPT.HEADER_CURRENCY_QUANTITY" sortable="true" width="100"/>
                    <a:column name="conversion_rate" align="right" editor="gerg_nf" prompt="PROMPT.LINE_CONVERSION_QUANTITY" sortable="true" width="100"/>
                    <a:column name="quotation_display" align="left" editor="gerg_cmb" prompt="GLD_EXCHANGE_RATE_DETAILS.QUOTATION" width="120"/>
                    <a:column name="conversion_date" align="center" editor="gerg_dp" prompt="GLD_EXCHANGE_RATE_DETAILS.CONVERSION_DATE" renderer="Aurora.formatDate" sortable="true" width="80"/>
                    <a:column name="period_name" align="center" editor="gerg_lov" prompt="GLD_EXCHANGE_RATE_DETAILS.PERIOD_NAME" sortable="true" width="80"/>
                    <a:column name="asignCm" align="center" renderer="FND1100_assignCompany" width="80"/>
                </a:columns>
                <a:editors>
                    <a:lov id="gerg_lov"/>
                    <a:numberField id="gerg_nf" decimalPrecision="6"/>
                    <a:comboBox id="gerg_cmb"/>
                    <a:datePicker id="gerg_dp"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
        <script><![CDATA[
         
            //隐藏列
            function hideRows(){
                var grid=$('gld_exchange_rate_gird');
                if (mode=='PERIOD'){
                    grid.hideColumn('conversion_date');
                }else if (mode=='DAILY'){
                    grid.hideColumn('period_name');
                }else{
                    grid.hideColumn('conversion_date');
                    grid.hideColumn('period_name');
                }
            }

            hideRows();
        
        ]]></script>
        <script purpose="auto_resize"><![CDATA[
            function GldBooksExchangeRateDetailInitSize() {
                //描述宽度
                var labelWidth = 75;
                //标签宽度,5 = 3padding + 2border-spacing
                var tagWidth = 150 + 5;
                //页面宽度、高度
                var vw = $A.getViewportWidth();
                var vh = $A.getViewportHeight();
                //留白宽度
                var marginWidth = 35 ;
                //自适应宽度
                var autoWidth = vw - marginWidth;
                Ext.get('gld_books_exchange_rate_detail_form').setWidth(autoWidth + 4);
                $('gld_exchange_rate_gird').setWidth(autoWidth);
            }
            //Ext.fly(window).on('resize', GldBooksExchangeRateDetailInitSize);
            GldBooksExchangeRateDetailInitSize();]]></script>
    </a:view>
</a:screen>
