            <a:dataSet id="gld_work_order_lines" autoCreate="true" autoQuery="true" model="gld.GLD5010.gld_work_order_lines" queryUrl="${/request/@context_path}/autocrud/gld.GLD5010.gld_work_order_lines/query?work_order_header_id=${/parameter/@work_order_header_id}" selectable="true" submitUrl="${/request/@context_path}/autocrud/gld.GLD5010.gld_work_order_lines/batch_update?work_order_header_id=${/parameter/@work_order_header_id}">
                <a:fields>
                    <a:field name="account_name" autoComplete="true" autoCompleteField="account_code" lovGridHeight="350" lovHeight="500" lovService="gld.GLD5010.gld_work_order_accounts_lov_wlzq?work_order_type_id=${/parameter/@work_order_type_id}" lovWidth="500" required="true" title="GLD_ACCOUNTS.ACCOUNT_DESCRIPTION">
                        <a:mapping>
                            <a:map from="account_id" to="account_id"/>
                            <a:map from="account_code" to="account_code"/>
                            <a:map from="account_desc" to="account_name"/>
