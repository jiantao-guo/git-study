        <a:link id="uploadFile_link" url="${/request/@context_path}/check_uploadFile.screen"/>
        <a:link id="gld_work_order_query_history_link" url="${/request/@context_path}/modules/gld/GLD5010/gld_work_order_query_history.screen"/>
        <a:link id="gld_work_order_maintain_window_link" url="${/request/@context_path}/modules/gld/GLD5010/gld_work_order_maintain_query.screen"/>
        <script><![CDATA[
        var index = 1;
        var initLineIndex = 0;
        var auditflag ='N';
       
        function initStyle(){
            var attach_number = '${/model/attachment/record/@atm_count}';
            var image_count='${/model/head_data/record/@image_count}';
            if (attach_number>0){
            var el = Ext.query('#attachmentButton button div');
             	Ext.get(el[0]).setStyle('color','red');
            }
            if(image_count>0){
               $('scanImg').el.setStyle('color', 'red'); 
            }
        }
          
            function amountValidator(record, name, value) {
                if (name == "entered_amount_dr" || name == "entered_amount_cr") {
                    var from_value = record.get('entered_amount_dr');
                    var to_value = record.get('entered_amount_cr');
                    if(!(to_value || from_value) || (to_value && from_value)){
                        return '请输入借方金额或者贷方金额!';
                    }
                }
                
                return true;
            }
            //跟踪单据
            
            function seeHistory() {
                var work_order_header_id = '${/parameter/@work_order_header_id}';
                var url = $('gld_work_order_query_history_link').getUrl() + '?head_id=' + work_order_header_id;
                new Aurora.Window({
                    id: 'gld_work_order_history_window',
                    url: url,
                    title: '${l:REC_REQUISITION_HISTORY}',
                    fullScreen: true
                });
            }
            //附件查看
            
            function uploadFile() {
                var work_order_header_id = '${/parameter/@work_order_header_id}';
                var url = /*${/request/@context_path}/uploadFile.screen*/
                $('uploadFile_link').getUrl() + '?table_name=GLD_WORK_ORDER_HEADERS' + '&header_id=' + work_order_header_id
                new Aurora.Window({
                    url: url,
                    title: '${l:PROMPT.VIEW_ATTACHMENT}',
                    id: 'check_upload_file_screen',
                    width: 600,
                    height: 400
                });
            }
            
            function updateLines(dataSet, record, name, value, oldValue) {
            
                var gld_journal_header_ds = $('gld_work_order_head');
                var exchange_rate = gld_journal_header_ds.getCurrentRecord().get('exchange_rate');
                //如果更新的是原币金额，则通过汇率计算出本币金额
                if (name === 'entered_amount_dr') {
                    if (value === '' || value === null) {
                        //设置借方金额可以为空
                        record.getField('entered_amount_dr').setRequired(false);
                        record.getField('function_amount_dr').setRequired(false);
            
                        record.getField('function_amount_dr').setReadOnly(false);
                        record.set('function_amount_dr', '');
                        record.getField('function_amount_dr').setReadOnly(true);
                        //设置贷方金额不可以为空
                        record.getField('entered_amount_cr').setRequired(true);
                        record.getField('function_amount_cr').setRequired(true);
                    } else {
                        record.getField('function_amount_dr').setReadOnly(false);
                        record.set('function_amount_dr', Math.round(value * exchange_rate * 100) / 100);
                        record.getField('function_amount_dr').setReadOnly(true);
                        //设置贷方金额可以为空
                        record.getField('entered_amount_cr').setRequired(false);
                        record.getField('function_amount_cr').setRequired(false);
                    }
                } else if (name === 'entered_amount_cr') {
                    if (value === '' || value === null) {
                        //设置贷方金额可以为空
                        record.getField('entered_amount_cr').setRequired(false);
                        record.getField('function_amount_cr').setRequired(false);
            
                        record.getField('function_amount_cr').setReadOnly(false);
                        record.set('function_amount_cr', '');
                        record.getField('function_amount_cr').setReadOnly(true);
                        //设置借方金额不可以为空
                        record.getField('entered_amount_dr').setRequired(true);
                        record.getField('function_amount_dr').setRequired(true);
                    } else {
                        record.getField('function_amount_cr').setReadOnly(false);
                        record.set('function_amount_cr', Math.round(value * exchange_rate * 100) / 100);
                        record.getField('function_amount_cr').setReadOnly(true);
                        //设置借方金额可以为空
                        record.getField('entered_amount_dr').setRequired(false);
                        record.getField('function_amount_dr').setRequired(false);
                    }
                }
               
            }
            //编辑原币借方金额
            
            function editAmountDr(record, name) {
                if (auditflag =='N'){
                if (record.get('entered_amount_cr') || record.get('entered_amount_cr') === 0) {
                    return '';
                } else {
                    return 'dt_number';
                }
                }else{
                    return '';
                }
            }
            
            //编辑原币贷方金额
            
            function editAmountCr(record, name) {
                if(auditflag=='N'){
                if (record.get('entered_amount_dr') || record.get('entered_amount_dr') === 0) {
                    return '';
                } else {
                    return 'dt_number';
                }
                }
                else{
                    return '';
                }
            
            }
            //创建凭证前预算检查
            
            function beforeJe() {
                
                var headerds = $('gld_work_order_head');
                var detailds = $('gld_work_order_lines');
                var work_order_header_id = $('gld_work_order_head').getCurrentRecord().get('work_order_header_id');
                var journal_date = $('date_ds').getAt(0).get('journal_date');
                var validate = headerds.validate();
                if (!validate) {
                    return;
                }
                
                $('gld_work_order_lines').submit();
            
                //预算检查
                Aurora.request({
                    url: "${/request/@context_path}/autocrud/db.bgt_check_pkg.core_check/execute",
                    scope: this,
                    para: {
                        document_type: 'WORK_ORDER',
                        document_id: work_order_header_id,
                        work_order_header_id: work_order_header_id,
                        journal_date: journal_date,
                        ignore_warning_flag: 'N'
            
                    },
                    success: function(ret) {
                        if (ret.result.error_level_code == 'BLOCK') {
                            Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', ret.result.message_code);
                        } else if (ret.result.error_level_code == 'ALLOWED') {
                            Aurora.showConfirm('${l:EXP_REP_PARTIALLY_SUBMITTED}', ret.result.message_code, function() {
                                Aurora.request({
                                    url: "${/request/@context_path}/autocrud/db.bgt_check_pkg.core_check/execute",
                                    scope: this,
                                    para: {
                                        document_type: 'WORK_ORDER',
                                        document_id: work_order_header_id,
                                        work_order_header_id: work_order_header_id,
                                        journal_date: journal_date,
                                        ignore_warning_flag: 'Y'
                                    },
                                    success: function(ret) {
                                        if (ret.result.error_level_code) {
                                            Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', ret.result.message_code);
                                        } else {
                                            create_Je();
                                        }
            
                                    }
                                });
                            }, null, 400, 150);
                        } else {
                            create_Je();
                        }
                    }
                });
            
            }
            //创建凭证
            
            function create_Je() {
                var work_order_header_id = $('gld_work_order_head').getCurrentRecord().get('work_order_header_id');
                var journal_date = $('date_ds').getAt(0).get('journal_date');
                Aurora.request({
                    url: "${/request/@context_path}/autocrud/db.gld_work_order_pkg.create_gld_wo_order_journal/execute",
                    scope: this,
                    para: {
                        work_order_header_id: work_order_header_id,
                        journal_date: journal_date
                    },
                    success: function(ret) {
                        if (ret.result.return_value != 'ERROR') {
                            Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', '${l:GLD_WORK_ORDER.CREATE_JOURNAL_SUCCESS}');
                            $('gld_work_order_accounts').query();
            
                        } else {
                            Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', '${l:GLD_WORK_ORDER.CREATE_JOURNAL_ERROR}');
                        }
                    }
                });
            }
            //删除凭证
            
            function deleteJe() {
                var work_order_header_id = $('gld_work_order_head').getCurrentRecord().get('work_order_header_id');
                Aurora.request({
                    url: "${/request/@context_path}/autocrud/gld.GLD5010.gld_work_order_accounts/delete",
                    scope: this,
                    para: {
                        work_order_header_id: work_order_header_id,
                    },
                    success: function(ret) {
                        Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', '${l:SUCCESSFUL_OPERATION}');
                        $('gld_work_order_accounts').query();
                    }
                });
            }
            //行保存成功后更新头上金额
            
            function girdSumbitSuccess(dataSet, res) {
            
                $('gld_work_order_head').query();
            }
            //复制一行
            function createLineRecord() {
                var ds = $('gld_work_order_lines');
                var linerecord = ds.getSelected();
                var lineIndex = index + initLineIndex;
                
                if (linerecord.length == 0) {
                    ds.create();
            
                    var records = ds.getAll();
            
                    for (i = 0;i < records.length - 1;i++) {
                        records[i].set('flag', 1);
                    }
                    var lrecord = ds.getAt(lineIndex - 1);
                    
                } else{
                
                    for (i = 0;i < linerecord.length;i++) {
                        var data = linerecord[i].data;
                        var newdata = {};
                        var len = ds.getAll().length;
                        for (var name in data) {
                            newdata[name] = data[name];
                        }
                        var record = new Aurora.Record(newdata);
                        record.isNew = 'true';
                        record.dirty = 'false';
                        
                        ds.add(record);
                        
                        lineNum = (index + initLineIndex) * 10;
                        var lineRecord = ds.getAt(len);
                        lineRecord.set('line_number', lineNum);
                        lineRecord.set('exp_report_line_id', '');
                        index = index + 1;
                    }
                }
              
                headAmountChanged();
            }
            //头上金额更新
            function headAmountChanged() {
                
                var records = $('gld_work_order_lines').getAll();
                var lineAmount = 0;
                for (var i = 0;i < records.length;i++) {
                    var req_amount = parseFloat(records[i].get('entered_amount_dr'));
                    lineAmount += req_amount ? req_amount : 0;
                }
                $('gld_work_order_head').getAt(0).set('amount', lineAmount);
            
            }
            //审核
            function auditFunc() {
              
               var work_order_header_id = '${/parameter/@work_order_header_id}';
				Aurora.request({
                            url:"${/request/@context_path}/autocrud/db.gld_work_order_pkg.audit_gld_work_order/execute",
                            scope: this,
                           para:{
                            work_order_header_id: work_order_header_id
                           },
                            success: function(ret) {
                                    Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', '${l:SUCCESSFUL_OPERATION}');
                                    $('gld_work_order_head').getCurrentRecord().getMeta().getField('je_date').setReadOnly(true);
                                    auditflag = 'Y';
                                    $('work_order_detail_window').close();
                                    $('gld_work_order_result_ds').query();
                            }
                        });
            }
             //拒绝
            function rejectFunc() {
              
                var work_order_header_id = '${/parameter/@work_order_header_id}';
				Aurora.request({
                            url:"${/request/@context_path}/autocrud/db.gld_work_order_pkg.audit_reject_work_order/execute",
                            scope: this,
                            para:{
                            work_order_header_id: work_order_header_id}
                            ,
                            success: function(ret) {
                                    Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', '${l:SUCCESSFUL_OPERATION}');
                                    auditflag = 'Y';
                                    $('work_order_detail_window').close();
                            }
                        });
            }
            function dateUpdate() {
                var journal_date = $('date_ds').getAt(0).get('journal_date');
                Aurora.request({
                    url: /*${/request/@context_path}/autocrud/expm.gld_get_period_name/query*/
                    $('gld_get_period_name_link_7').getUrl(),
                    para: {
                        p_date: journal_date
                    },
                    success: getPeriodName,
                    scope: this
                });
            }
            
            function getPeriodName(args) {
                var record = args.result.record;
                var red = $('date_ds').getAt(0);
                var period_name = '';
                if (record.length) {
                    period_name = record[0].period_name;
                } else {
                    period_name = record.period_name;
                }
                red.set('period_name', period_name);
                if (!period_name) {
                    Aurora.showWarningMessage('', '${l:EXP_REPORT_ACCOUNTS.CHECK1}', null, 200, 100);
                }
            }
            //影像查看
            function scanImg() {
               
                var aw = window.screen.availWidth;
                var ah = window.screen.availHeight;
                var work_order_number = '${/model/head_data/record/@work_order_number}';
                var cux_sys_image_query_url = '${/model/head_data/record/@cux_sys_image_query_url}';
                var cux_sys_image_busno = '${/model/head_data/record/@cux_sys_image_busno}';
                var url = cux_sys_image_query_url + '?token_type=bearer&scope=read write&busibyte='+cux_sys_image_busno+'&barno=' + work_order_number;
            
                window.open(url, 'cux_image_scan_window', "left=0,top=0,width=" + aw + ",height=" + ah + ",status=0,toolbar=0,menubar=0,location=0,scrollbars=1,resizable=1", false);
               
            }
            
        ]]></script>
        <a:dataSets>
            <a:dataSet id="employee_ds">
                <a:datas dataSource="/model/employee_list"/>
            </a:dataSet>
            <a:dataSet id="date_ds" autoCreate="true">
                <a:fields>
                    <a:field name="journal_date" defaultValue="${/model/date/record/@current_date}" prompt="GLD_WORK_ORDER_HEADERS.JE_DATE" required="true"/>
