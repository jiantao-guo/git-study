                });
            }
            
            function getPeriodName(args) {
                var record = args.result.record;
                var red = $('date_ds').getAt(0);
                var period_name = '';
                if (record.length) {
                    period_name = record[0].period_name;
                } else {
                    period_name = record.period_name;
                }
                red.set('period_name', period_name);
                if (!period_name) {
                    Aurora.showWarningMessage('', '${l:EXP_REPORT_ACCOUNTS.CHECK1}', null, 200, 150);
                }
            }
            
            function saveFunc(nextProcess) {
                if(!$('gld_work_order_lines').validate()){
                    return;
                }
                var datas = [];
                var lrecord = $('gld_work_order_lines').getAll();
                for (var i = 0;i < lrecord.length;i++) {
                    var data = lrecord[i].data;
                    var line_id = lrecord[i].get('work_order_line_id');
                    if (line_id) {
                        lrecord[i].set('_status', 'update');
                        datas.push(lrecord[i].data);
                    } else {
                        lrecord[i].set('_status', 'insert');
                        datas.push(lrecord[i].data);
                    }
            
                }
                var Params = {};
                Params['work_order_header_id'] = '${/parameter/@head_id}';
                Params['je_date'] = $('date_ds').getAt(0).get('journal_date');
                Params['period_name'] = $('date_ds').getAt(0).get('period_name');
                Params['details'] = datas;
                Aurora.request({
                    url: "${/request/@context_path}/modules/gld/GLD5022/wbc_gld_work_order_save.svc",
                    scope: this,
                    para: Params,
                    success: function(ret) {
                        if (typeof(nextProcess) != 'function') {
                            Aurora.showMessage('${l:EXP_REP_PARTIALLY_SUBMITTED}', '${l:SUCCESSFUL_OPERATION}');
                            $('gld_work_order_lines').query();
                        }else{
                            nextProcess();
                        }
                    }
                });
            }
            
            function loadData() {
                //导入前自动保存一次
                saveFunc(function() {
                    var work_order_header_id = '${/parameter/@head_id}';
                    var url = $('loadData_link').getUrl() + '?work_order_header_id=' + work_order_header_id;
                    window.open(url);
                    
                });
            }
