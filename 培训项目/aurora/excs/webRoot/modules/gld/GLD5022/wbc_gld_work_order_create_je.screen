        <script><![CDATA[
        //初始化默认信息
            initStyle();
            function expRepMTStandardInitSize() {
                //描述宽度
                var labelWidth = 75;
                //标签宽度,5 = 3padding + 2border-spacing
                var tagWidth = 150 + 5;
                //页面宽度、高度
                var vw = $A.getViewportWidth();
                var marginWidth=35;
                if (vw>1800){
                //留白宽度
                //系统参数定义影像查看页面的宽度
                	 marginWidth = parseInt('${/model/cux_exp_img/record/@cux_img_window_width}') + 35;
                }
                //自适应宽度
                var autoWidth = vw - marginWidth;
                //Form内部宽度，-2border
                var formInnerWidth = autoWidth - 2;
                //所占列数
                var colSpan = 4;
                //设置组件的自适应宽度
                Ext.get('gld_work_order_head_form').setWidth(autoWidth-2);
                
				//设置TextArea的自适应宽度,别问我最后那个6是哪里来的，试出来的
                Ext.get('gld_desc_ta').setWidth(formInnerWidth - (formInnerWidth / colSpan - labelWidth - tagWidth) - labelWidth - 6);
                $('line_tab').setWidth(autoWidth);
                $('gld_work_order_accounts_grid').setWidth(autoWidth-8);
                $('lines_grid').setWidth(autoWidth-8);
                
            }
            expRepMTStandardInitSize();
        ]]></script>
