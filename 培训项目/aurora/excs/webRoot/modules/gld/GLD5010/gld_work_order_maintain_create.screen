            function cellClickFunction(grid, row, name, record, value) {
                if (name == 'company_name') {
                    var employee_id = $('gld_work_order_head').getAll()[0].get('employee_id');
                    var duty_code = $('gld_work_order_head').getAll()[0].get('duty_code');
