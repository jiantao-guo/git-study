<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <a:model-query fetchAll="true" model="demo.file_download" rootPath="attachments_info"/>
    </a:init-procedure>
    <a:view>
        <style><![CDATA[
            html,body {
                padding:0px;
                margin:0px;
                font-size:12px;
            }
            .card {
                border: 1px solid #B0B0B0;
                background-color:#757575;
                -webkit-border-radius:4px;
                border-radius:4px;
                -moz-box-shadow: 0px 1px 3px rgba(0,0,0,0.35);
                -webkit-box-shadow: 0px 1px 3px rgba(0,0,0,0.35);
                box-shadow: 0px 1px 3px rgba(0,0,0,0.35);
                margin-top:20px;
            }
            .card .ct a {
                color:#48a6f8;
            }
            .card .ct {
                background-color: #48a6f8;
                height:30px;
                -moz-border-radius: 4px 4px 0px 0px;
                -webkit-border-radius: 4px 4px 0px 0px;
                border-radius: 4px 4px 0px 0px;
                border-bottom:1px solid #ccc;
                line-height:28px;
                padding-left:10px;
                color:#fff;
                font-size:14px;
                font-weight:bold;
            }
            .card .cb {
                padding:5px;
                background-color:#f6f6f6;
                -moz-border-radius: 0px 0px 4px 4px;
                -webkit-border-radius: 0px 0px 4px 4px;
                border-radius: 0px 0px 4px 4px;
            }
            .citem {
                position:relative;
                background-color:#fff;
                width:160px;
                height:25px;
                margin:0px;
                border: 1px solid #B0B0B0;
                float:left;
                cursor:pointer;
                -moz-border-radius: 4px;
                -webkit-border-radius:4px;
                border-radius:4px;
                -moz-box-shadow: 0px 1px 3px rgba(0,0,0,0.35);
                -webkit-box-shadow: 0px 1px 3px rgba(0,0,0,0.35);
                box-shadow: 0px 1px 3px rgba(0,0,0,0.35);
            }
            .cadd {
                border: 1px dashed #B0B0B0; 
                background-color:#fff;
                width:160px;
                height:25px;
                margin:0px;
                float:left;
                cursor:pointer;
                -moz-border-radius: 4px;
                -webkit-border-radius:4px;
                border-radius:4px;
            }
            .citem:link,.citem:visited,.citem:active{
                COLOR: #5e5e5e;
            }
            .citem:hover {
                border: 1px solid #5e5e5e;
                color:#ff9900;
            }            
            .del_icon,.add_icon {
                width:24px;
                height:24px;
                float:right;
                position:absolute;
                top:-10px;
                right:-10px;
            }
            .del_icon{
                display:none;
                background: transparent url(${/request/@context_path}/images/delete.png) 100% 0px no-repeat;
            }
            .add_icon{
                background: transparent url(${/request/@context_path}/images/favorite.png) 100% 0px no-repeat;
            }
            
            .card_edit .del_icon {
                display:block;
            }
            .ctext {
                vertical-align:middle;                
                width: 150px;
                font-size:14px;
                height:20px;
                margin:5px 0px 5px 0px;
                text-overflow:ellipsis;
                overflow:hidden;
                white-space:nowrap;
                work-break:keep-all;
            }
            .addicon {
                width: 48px;
                height:48px;
                margin:15px 10px;
                background: transparent url(${/request/@context_path}/images/menu_add.png) 100% 100% no-repeat;
            }
            
            .fr {
                float:right;
            }
            
            .row {
                padding:9px 8x 0;
                height:30px;
            }
            
            .ellipsis_bulletin {
                width:75%;
                text-overflow:ellipsis;
                overflow:hidden;                
                white-space:nowrap;
                word-break:keep-all;
            }            
            
            
        ]]></style>
        <script><![CDATA[
            function blt1010_return_main() {
                window.close();
            }
        ]]></script>
        <div class="card" style="margin-left:5px;">
            <div class="ct">
                <span style="float:left;"><![CDATA[${/parameter/@bulletin_type}]]></span>
            </div>
            <div class="cb">
                <table style="height:200px;" width="100%">
                    <tr>
                        <td valign="top">
                            <a:freeMarker><![CDATA[
                                        		<#if model.getObject("/model/attachments_info").getChilds()??>

                                        			<#list model.getObject("/model/attachments_info").getChilds() as item>
                                        				<div class="row">
                                        					<table style="width:100%;">
			                                        			<td  style="width:25%;">
			                                        				<a href="javascript:download_attachments(${item.getString('attachment_id')})">
			                                        					<div class="ellipsis_bulletin">
			                                        						${item.getString('file_name')}
			                                        					</div>
			                                        				</a>
			                                        			</td>
			                                        			<td style="width:60%;">
			                                        				<a href="javascript:download_attachments(${item.getString('attachment_id')})">
			                                        					<div  style="float:left;">
			                                        						${item.getString('file_name')?html}...
			                                        					</div>		
			                                        				</a>
			                                        			</td>
                                        						<td style="width:15%;">
			                                        				<div class="fr">${item.getString('creation_date')}</div>
			                                        			</td>
	                                        				</table>
                                        				</div>
                                        			</#list>
                                        		</#if>
                                        	]]></a:freeMarker>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <script language="javascript"><![CDATA[
            function download_attachments(id) {
                var url = $('bulletin_details_link_1').getUrl() + '?bulletin_id=' + id;
                window.open(url);
            }
        ]]></script>
    </a:view>
</a:screen>
