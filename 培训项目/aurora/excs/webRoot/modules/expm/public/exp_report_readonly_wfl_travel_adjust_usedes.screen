                    //标签宽度,5 = 3padding + 2border-spacing
                    var tagWidth = 150 + 5;
                    //页面宽度、高度
                    var vw = $A.getViewportWidth();
                    //留白宽度
                    var marginWidth = 35;
                    //自适应宽度
                    var autoWidth = vw - marginWidth;
                    //Form内部宽度，-2border
                    var formInnerWidth = autoWidth - 2;
                    //所占列数
                    var colSpan = 4;
                    //设置组件的自适应宽度
                    Ext.get('exp_rep_ro_wfl_standard_head_form').setWidth(autoWidth + 4);
                    $('exp_rep_ro_wfl_standard_line_tab').setWidth(autoWidth + 4);
                    $('grid').setWidth(autoWidth + 4 - 17);
                    $('pmt_grid').setWidth(autoWidth + 4 - 17);
                    //设置TextArea的自适应宽度,别问我最后那个6是哪里来的，试出来的
                    Ext.get('exp_rep_ro_wfl_standard_desc_ta').setWidth(formInnerWidth - (formInnerWidth / colSpan - labelWidth - tagWidth) - labelWidth - 6);
                }
                //Ext.fly(window).on('resize', expRepROWFLStandardInitSize);
                expRepROWFLStandardInitSize();
