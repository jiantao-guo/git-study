            //add by Qu yuanyuan 2015-11-25 默认集中支付
            
            function loadPmtFunc() {
            
                var pmt_lines_records = $('pmtplan_schedules_ds').getAll();
                var gather_flag_records = $('gather_flag_ds').getAll();
            
                for (var i = 0;i < gather_flag_records.length;i++) {
                    if (gather_flag_records[i].get('code_value') == '1') {
                        for (var j = 0;j < pmt_lines_records.length;j++) {
                            if (!pmt_lines_records[j].get('gather_flag')) {
                                pmt_lines_records[j].set('gather_flag', gather_flag_records[i].get('code_value'));
                                pmt_lines_records[j].set('gather_flag_desc', gather_flag_records[i].get('code_value_name'));
                            }
                        }
                        break;
                    }
                }
            
                show_write_off_message();
            }
            
            function scanImg() {
                var mode = '';
                //获取单据影像数量
                Aurora.request({
                    url: /*expm/cux_exp_image_count*/
                    $('cux_exp_image_count_link').getUrl(),
                    para: {
                        head_id: '${/model/head_root/record/@exp_report_header_id}',
                        document_category: 'EXP_RPT'
                    },
                    scope: this,
                    success: function(ret) {
                        if (ret.result.image_count > 0) {
                            mode = 'update';
                        } else {
                            mode = 'create';
                        }
                        var aw = window.screen.availWidth;
                        var ah = window.screen.availHeight;
                        var unit_code = '${/model/head_root/record/@unit_code}';
                        var employee_code = '${/model/head_root/record/@employee_code}';
                        var exp_report_number = '${/model/head_root/record/@exp_report_number}';
                        var cux_sys_image_url = '${/model/head_root/record/@cux_sys_image_url}';
                        var cux_sys_image_bustype = '${/model/head_root/record/@cux_sys_image_bustype}';
                        var cux_sys_image_busno = '${/model/head_root/record/@cux_sys_image_busno}';
                        var url = cux_sys_image_url + '?barno=' + exp_report_number + '&mode=' + mode + '&currentuser=' + employee_code + '&BusType=' + cux_sys_image_bustype + '&BusNO=' + cux_sys_image_busno + '&UnitNo=' + unit_code;
            
                        window.open(url, 'cux_image_scan_window', "left=0,top=0,width=" + aw + ",height=" + ah + ",status=0,toolbar=0,menubar=0,location=0,scrollbars=1,resizable=1", false);
            
                    }
                });
            
            }
