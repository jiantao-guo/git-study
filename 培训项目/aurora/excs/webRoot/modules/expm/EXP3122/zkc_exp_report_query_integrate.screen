                        <a:mapping>
                            <a:map from="code_name" to="exp_report_type_display"/>
                            <a:map from="expense_report_type_code" to="exp_report_type"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="exp_report_type"/>
                    <a:field name="exp_report_emp_display" defaultValue="${/model/current_emp/record/@name_code}" prompt="EXP_REPORT_HEADERS.EMPLOYEE_NAME" readOnly="true">
                        <!-- <a:mapping>
                            <a:map from="name_code" to="exp_report_emp_display"/>
                            <a:map from="employee_id" to="exp_report_emp"/>
                        </a:mapping> --><![CDATA[
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                    ]]></a:field>
                    <a:field name="exp_report_emp" defaultValue="${/model/current_emp/record/@employee_id}"/>
                    <a:field name="report_date_from" prompt="EXP_EXPENSE_REPORT_AUDIT.REPORT_DATE_F"/>
                    <a:field name="report_date_to" prompt="EXP_EXPENSE_REPORT_AUDIT.REPORT_DATE_T"/>
                    <a:field name="company_id_display" autoComplete="true" autoCompleteField="company_short_name" lovGridHeight="320" lovHeight="450" lovService="fnd.fnd_companies_tree" lovWidth="500" prompt="ACP_ACP_REQUISITION_HDS.COMPANY_ID" title="COMPANY_SELECTED">
