                    </a:field>
                    <a:field name="resp_center"/>
                    <a:field name="internal_period_num_from_display" autoComplete="true" autoCompleteField="period_name" lovGridHeight="320" lovHeight="450" lovService="gld.EXP3120.gld_period_status_lov" lovWidth="500" prompt="AUDIT_PERIOD_FROM" title="PROMPT.PERIOD_QUERY">
                        <a:mapping>
                            <a:map from="period_name" to="internal_period_num_from_display"/>
                            <a:map from="internal_period_num" to="internal_period_num_from"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="internal_period_num_from"/>
                    <a:field name="internal_period_num_to_display" autoComplete="true" autoCompleteField="period_name" lovGridHeight="320" lovHeight="450" lovService="gld.EXP3120.gld_period_status_lov" lovWidth="500" prompt="AUDIT_PERIOD_TO" title="PROMPT.PERIOD_QUERY">
                        <a:mapping>
                            <a:map from="period_name" to="internal_period_num_to_display"/>
                            <a:map from="internal_period_num" to="internal_period_num_to"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="internal_period_num_to"/>
                    <a:field name="budget_item_display" autoComplete="true" autoCompleteField="description" lovGridHeight="320" lovHeight="450" lovService="bgt.bgt_budget_items_lov" lovWidth="500" prompt="EXP_EXPENSE_ITEMS.BUDGET_ITEM_ID" title="EXP_EXPENSE_ITEMS.BUDGET_ITEM_ID">
                        <a:mapping>
                            <a:map from="code_description" to="budget_item_display"/>
                            <a:map from="budget_item_id" to="budget_item"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="budget_item"/>
                    <a:field name="expense_item_display" autoComplete="true" autoCompleteField="description" lovGridHeight="320" lovHeight="450" lovService="expm.EXP3120.exp_expense_items_vl?company_id=${/session/@company_id}" lovWidth="500" prompt="EXP_EXPENSE_ITEMS.EXPENSE_ITEM_ID" title="EXP_EXPENSE_ITEMS.EXPENSE_ITEM_ID">
                        <a:mapping>
                            <a:map from="code_description" to="expense_item_display"/>
                            <a:map from="expense_item_id" to="expense_item"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="expense_item"/>
                    <a:field name="unit_id_display" autoComplete="true" autoCompleteField="description" lovGridHeight="320" lovHeight="450" lovService="exp.EXP3120.exp_org_emp_dpt" lovWidth="500" prompt="BUDGET_USE_DPT" title="ACP_ACP_REQUISITION_HDS.UNIT_ID">
                        <a:mapping>
