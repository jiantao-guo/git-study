                    </a:field>
                    <a:field name="company_id"/>
                    <a:field name="resp_center_display" autoComplete="true" autoCompleteField="code_name" lovGridHeight="320" lovHeight="450" lovService="fnd.fnd_responsibility_center_emp_vl" lovWidth="500" prompt="BUDGET_MANAGE_DPT" title="ACP_INVOICE_LINES.RESPONSIBILITY_CENTER_ID">
                        <a:mapping>
                            <a:map from="code_name" to="resp_center_display"/>
