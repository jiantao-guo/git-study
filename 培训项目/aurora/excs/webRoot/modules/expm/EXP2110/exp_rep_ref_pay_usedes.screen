<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure>
        <a:model-query model="exp.exp_expense_report_types_vl" rootpath="exp_report_ref_types_path"/>
    </a:init-procedure>
    <a:view>
        <a:link id="exp_com_payment_item_screen_link" url="${/request/@context_path}/modules/expm/EXP2110/exp_com_rep_pay_items_ref.screen"/>
        <script><![CDATA[
        
        	function setinitdata(ds,record,index){
        		record.set('expense_report_type_id','${/parameter/@expense_report_type_id}');
        	}
        	
        	function gridEditorFunction(record,name){
        		if(record.isNew){
        			return 'usedes_code_lov';
        		}
        		return '';
        	}
        	function editPayItem(value, record, name) {
                var recordIndex = $('exp_report_ref_pay_usedes_result_ds').indexOf(record);
                var Id = record.get('usedes_id');
                var expense_report_type_id =  record.get('expense_report_type_id');
                if (!record.isNew) {
                    
                        return '<a href="javascript:showDetail(' + recordIndex + ',' + Id +','+ expense_report_type_id+');">' + '${l:EXP_SOB_TYPE_REF_ITEM.EXPENSE_ITEM}' + '</a>';
                    
                } else {
                    
                    return '';
                }
            }
            function showDetail(recordIndex, Id,expense_report_type_id) {
                new Aurora.Window({
                    id: 'exp_com_payment_item_screen',
                    url: $('exp_com_payment_item_screen_link').getUrl() + '?recordIndex=' + recordIndex + '&usedes_id=' + Id +'&expense_report_type_id='+expense_report_type_id,
                    title: '${l:EXP_SOB_TYPE_REF_ITEM.EXPENSE_ITEM}',
                    fullScreen:true
                });
            }
        	
		]]></script>
        <a:dataSets>
            <a:dataSet id="exp_report_ref_pay_usedes_query_ds">
                <a:datas dataSource="/model/exp_report_ref_types_path"/>
                <a:fields>
                    <a:field name="expense_report_type_code" readOnly="true"/>
                    <a:field name="description" readOnly="true"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="exp_report_ref_pay_usedes_result_ds" autoQuery="true" model="expm.EXP2110.exp_rep_ref_payment_usedes" queryDataSet="exp_report_ref_pay_usedes_query_ds" selectable="true" submitUrl="${/request/@context_path}/modules/expm/EXP2110/exp_rep_ref_payment_usedes.svc">
                <a:fields>
                    <a:field name="expense_report_ref_type_id"/>
                    <a:field name="expense_report_type_id"/>
                    <a:field name="usedes_id"/>
                    <a:field name="usedes_code" autoComplete="true" autoCompleteField="usedes_code" lovGridHeight="310" lovHeight="450" lovService="csh.csh_payment_usedes_vl" lovWidth="500" prompt="CSH_PAYMENT_USEDS.USEDS_CODE" required="true" title="CSH_PAYMENT_USEDS.USEDS_CODE">
                        <a:mapping>
                            <a:map from="usedes_code" to="usedes_code"/>
                            <a:map from="usedes_id" to="usedes_id"/>
                            <a:map from="description" to="description"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="primary_flag" checkedValue="Y" defaultValue="N" prompt="EXP_EXPENSE_REP_TYPES_VL.USEDES" uncheckedValue="N"/>
                    <a:field name="description" prompt="CSH_PAYMENT_USEDS.DESCRIPTION"/>
                </a:fields>
                <a:events>
                    <a:event name="add" handler="setinitdata"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton bind="exp_rep_ref_pay_usedes_grid" type="add" width="80"/>
                <a:gridButton bind="exp_rep_ref_pay_usedes_grid" type="delete" width="80"/>
                <a:gridButton bind="exp_rep_ref_pay_usedes_grid" type="save" width="80"/>
                <a:gridButton bind="exp_rep_ref_pay_usedes_grid" type="clear" width="80"/>
            </a:screenTopToolbar>
            <a:form id="exp_rep_ref_pay_usedes_form" column="1" title="EXP_REPORT_REF_TYPE.EXP_TYPE_DEF_PAY_USEDS">
                <a:box id="exp_rep_ref_pay_usedes_box" column="4" style="width:100%">
                    <a:textField name="expense_report_type_code" bindTarget="exp_report_ref_pay_usedes_query_ds" prompt="EXP_EXP_REPORT_TYPE.EXPENSE_REPORT_TYPE_CODE"/>
                    <a:textField name="description" bindTarget="exp_report_ref_pay_usedes_query_ds" prompt="EXP_EXP_REPORT_TYPE.EXPENSE_REPORT_TYPE_DESCRIPTION"/>
                </a:box>
            </a:form>
            <a:grid id="exp_rep_ref_pay_usedes_grid" bindTarget="exp_report_ref_pay_usedes_result_ds" marginHeight="171" navBar="true">
                <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="clear"/>
                    <a:button type="save"/>
                    <a:button type="delete"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="usedes_code" align="center" editorFunction="gridEditorFunction" width="150"/>
                    <a:column name="description" width="150"/>
                    <a:column name="primary_flag" editor="usedes_checkbox" width="100"/>
                    <a:column name="expense_item" align="center" renderer="editPayItem" width="100"/>
                </a:columns>
                <a:editors>
                    <a:lov id="usedes_code_lov"/>
                    <a:checkBox id="usedes_checkbox"/>
                </a:editors>
            </a:grid>
            <script><![CDATA[
            function expRepRefPayInitSize() {                
                //描述宽度
        　　     var labelWidth = 75;
        　　     //标签宽度,5 = 3padding + 2border-spacing
        　　     var tagWidth = 150 + 5;
        　　     //页面宽度、高度
        　　     var vw = $A.getViewportWidth();
        　　     var vh = $A.getViewportHeight();
        　　     //留白宽度
        　　     var marginWidth = 35;
        　　     //自适应宽度
        　　     var autoWidth = vw - marginWidth;
        　　     //Form内部宽度，-2border
        　　     var formInnerWidth = autoWidth - 2;
        　　     //所占列数
        　　     var colSpan = 4;
        　　     //设置组件的自适应宽度
        　　     Ext.get('exp_rep_ref_pay_usedes_form').setWidth(autoWidth + 4);
        	    $('exp_rep_ref_pay_usedes_grid').setWidth(autoWidth);                  
            }
			Aurora.onReady(function(){
			    expRepRefPayInitSize();
			});
        ]]></script>
        </a:screenBody>
    </a:view>
</a:screen>
