<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <script><![CDATA[

            
            function closeAssignPage() {
                $('exp_sob_payment_item_screen').close();
            }
            
            function addfunction(dataSet, record, index) {
                
                record.set('expense_report_type_id', '${/parameter/@expense_report_type_id}');
                record.set('usedes_id', '${/parameter/@usedes_id}');
                var set_of_book_id = $('EXP4020_expense_report_types_ds').getAt(0).get('set_of_books_id');
                record.set('set_of_book_id', set_of_book_id);
            }
            
            function editExpenseItems(record, name) {
               
                if (record.isNew) {
                    return "EXP4020_lov";
                } else {
                    return "";
                }
            
            }
            
           
        ]]></script>
        <a:dataSets>
            <a:dataSet id="EXP4020_exp_sob_rep_pay_items_ref_ds" autoQuery="true" model="exp.EXP4020.exp_sob_rep_pay_items_ref" pageSize="50" queryUrl="${/request/@context_path}/autocrud/exp.EXP4020.exp_sob_rep_pay_items_ref/query?expense_report_type_id=${/parameter/@expense_report_type_id}&amp;usedes_id=${/parameter/@usedes_id}" selectable="true" submitUrl="${/request/@context_path}/autocrud/exp.EXP4020.exp_sob_rep_pay_items_ref/batch_update">
                <a:fields>
                    <a:field name="expense_item_code" lovHeight="500" lovLabelWidth="180" lovService="exp.EXP4020.exp_expense_items_lov" lovWidth="500" title="EXP_SOB_TYPE_REF_ITEM.EXPENSE_ITEM">
                        <a:mapping>
                            <a:map from="expense_item_id" to="expense_item_id"/>
                            <a:map from="expense_item_desc" to="expense_item"/>
                            <a:map from="expense_item_code" to="expense_item_code"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="usedes_id" defaultValue="${/parameter/@usedes_id}"/>
                    <a:field name="set_of_book_id"/>
                    <a:field name="expense_report_type_id" defaultValue="${/parameter/@expense_report_type_id}"/>
                </a:fields>
                <a:events>
                    <a:event name="add" handler="addfunction"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton bind="exp_sob_rep_ref_grid" type="add" width="80"/>
                <a:gridButton bind="exp_sob_rep_ref_grid" type="delete" width="80"/>
                <a:gridButton bind="exp_sob_rep_ref_grid" type="save" width="80"/>
                <a:gridButton bind="exp_sob_rep_ref_grid" type="clear" width="80"/>
                <a:toolbarButton click="closeAssignPage" text="HAP_BACK" width="80"/>
            </a:screenTopToolbar>
            <a:form id="exp_sob_rep_ref_form" labelWidth="100" row="1" title="PRJ_PROJECTS.PROJECT_TYPE_ID" width="600">
                <a:textField name="usedes_code" bindTarget="exp_sob_report_ref_pay_usedes_result_ds" prompt="CSH_PAYMENT_USEDS.USEDS_CODE" readOnly="true"/>
                <a:textField name="usedes_desc" bindTarget="exp_sob_report_ref_pay_usedes_result_ds" prompt="CSH_PAYMENT_USEDS.DESCRIPTION" readOnly="true"/>
            </a:form>
            <a:grid id="exp_sob_rep_ref_grid" bindTarget="EXP4020_exp_sob_rep_pay_items_ref_ds" marginHeight="171" navBar="true">
                <a:columns>
                    <a:column name="expense_item_code" editorFunction="editExpenseItems" prompt="EXP_SOB_TYPE_REF_ITEM.EXPENSE_ITEM_CODE" width="160"/>
                    <a:column name="expense_item" align="center" prompt="EXP_SOB_TYPE_REF_ITEM.EXPENSE_ITEM" width="334"/>
                </a:columns>
                <a:editors>
                    <a:lov id="EXP4020_lov"/>
                </a:editors>
            </a:grid>
            <script><![CDATA[
            function expRepRefPayInitSize() {                
                //描述宽度
        　　     var labelWidth = 75;
        　　     //标签宽度,5 = 3padding + 2border-spacing
        　　     var tagWidth = 150 + 5;
        　　     //页面宽度、高度
        　　     var vw = $A.getViewportWidth();
        　　     var vh = $A.getViewportHeight();
        　　     //留白宽度
        　　     var marginWidth = 35;
        　　     //自适应宽度
        　　     var autoWidth = vw - marginWidth;
        　　     //Form内部宽度，-2border
        　　     var formInnerWidth = autoWidth - 2;
        　　     //所占列数
        　　     var colSpan = 4;
        　　     //设置组件的自适应宽度
        　　     Ext.get('exp_sob_rep_ref_form').setWidth(autoWidth + 4);
        	    $('exp_sob_rep_ref_grid').setWidth(autoWidth);                  
            }
			Aurora.onReady(function(){
			    expRepRefPayInitSize();
			});
        ]]></script>
        </a:screenBody>
    </a:view>
</a:screen>
