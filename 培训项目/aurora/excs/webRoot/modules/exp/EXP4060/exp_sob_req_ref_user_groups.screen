    </a:init-procedure>-->
    <a:view>
        <script><![CDATA[
            function EXP4060_cancel() {
                $('EXP4060_exp_sob_req_ref_user_groups').close();
            }
            
            function EXP4060_gridEditorFunction(record, name) {
                if (record.isNew) {
                    return 'EXP4060_userlov';
                }
                return '';
            
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="EXP4060_reqreftypes_ds" autoQuery="true" queryUrl="${/request/@context_path}/autocrud/exp.EXP4060.exp_sob_req_ref_user_groups_query/query?expense_requisition_type_id=${/parameter/@expense_requisition_type_id}" selectable="true" submitUrl="${/request/@context_path}/modules/exp/EXP4060/exp_sob_req_ref_user_groups_save_control.svc">
                <a:fields>
                    <a:field name="expense_user_groups_code" lovGridHeight="340" lovHeight="460" lovService="exp.EXP4060.exp_sob_user_group?set_of_books_id=${/parameter/@set_of_books_id}&amp;enabled_flag=&apos;${/model/expre/record/@enabled_flag}&apos;" lovWidth="450" lovlabelWidth="200" required="true" title="EXP_EMPLOYEE_GROUP.EXPENSE_USER_GROUP_CODE">
                        <a:mapping>
                            <a:map from="user_groups_code" to="expense_user_groups_code"/>
                            <a:map from="description" to="description"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="expense_requisition_type_id" defaultValue="${/parameter/@expense_requisition_type_id}"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton bind="exp_sob_req_ref_user_grid" type="add" width="80"/>
                <a:gridButton bind="exp_sob_req_ref_user_grid" type="delete" width="80"/>
                <a:gridButton bind="exp_sob_req_ref_user_grid" type="save" width="80"/>
                <a:gridButton bind="exp_sob_req_ref_user_grid" type="clear" width="80"/>
            </a:screenTopToolbar>
            <a:form id="exp_sob_req_ref_user_form" title="SETOFBOOK_LEVEL_EXPENSE_REQ_TYPE_DEFINE_USER_GROUP">
                <a:hBox>
                    <a:textField name="expense_requisition_type_code" bindTarget="EXP4060_expensetypes_ds" prompt="EXP_REQ_REF_USER_GRO.EXPENSE_USER_GROUP_CODE" readOnly="true"/>
                    <a:textField name="description" bindTarget="EXP4060_expensetypes_ds" prompt="EXP_EXPENSE_ITEMS.DESCRIPTION" readOnly="true"/>
                </a:hBox>
            </a:form>
            <a:grid id="exp_sob_req_ref_user_grid" bindTarget="EXP4060_reqreftypes_ds" marginHeight="171" navBar="true">
                <a:columns>
                    <a:column name="expense_user_groups_code" editorFunction="EXP4060_gridEditorFunction" prompt="EXP_EMPLOYEE_GROUP.EXPENSE_USER_GROUP_CODE" width="120"/>
                    <a:column name="description" prompt="EXP_REQ_REF_TYPE.DESCRIPTION" width="300"/>
                </a:columns>
                <a:editors>
                    <a:lov id="EXP4060_userlov"/>
                </a:editors>
            </a:grid>
            <script><![CDATA[
            function expRepRefPayInitSize() {                
                //描述宽度
        　　     var labelWidth = 75;
        　　     //标签宽度,5 = 3padding + 2border-spacing
        　　     var tagWidth = 150 + 5;
        　　     //页面宽度、高度
        　　     var vw = $A.getViewportWidth();
        　　     var vh = $A.getViewportHeight();
        　　     //留白宽度
        　　     var marginWidth = 35;
        　　     //自适应宽度
        　　     var autoWidth = vw - marginWidth;
        　　     //Form内部宽度，-2border
        　　     var formInnerWidth = autoWidth - 2;
        　　     //所占列数
        　　     var colSpan = 4;
        　　     //设置组件的自适应宽度
        　　     Ext.get('exp_sob_req_ref_user_form').setWidth(autoWidth + 4);
        	    $('exp_sob_req_ref_user_grid').setWidth(autoWidth);                  
            }
			Aurora.onReady(function(){
			    expRepRefPayInitSize();
			});
        ]]></script>
        </a:screenBody>
    </a:view>
</a:screen>
