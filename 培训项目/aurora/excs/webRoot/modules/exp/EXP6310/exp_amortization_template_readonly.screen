        <a:link id="exp_amortization_template_create_link_2" url="${/request/@context_path}/modules/exp/EXP2310/exp_amortization_template_create.screen"/>
        <script><![CDATA[
        	function setfunctionamount(value, record, name){
        	
        		var report_amounts = record.get('entered_amount');
        		var ds=$('exp_amor_tp_hds_ds');
        		var records = $('exp_amor_tp_hds_ds').getAt(0);
        	
        		if(records){
	        	   var ex_rate = records.get('exchange_rate');
                   if(ex_rate == '') {exchange_rate=1;}
	        		var func_amount;
	        		var ex_rate_quotation = records.get('exchange_rate_quotation');					
					if(ex_rate_quotation == 'DIRECT QUOTATION'){
						func_amount = report_amounts * ex_rate;
					}else if(ex_rate_quotation == 'INDIRECT QUOTATION'){
						func_amount = report_amounts * (1 / ex_rate);
					}else{
						func_amount = report_amounts * ex_rate;
					}
					record.set('functional_amount', isNaN(func_amount)?'':func_amount);
					return isNaN(func_amount)?'':func_amount;
				}
        	}
        	
        	function create(){
        		window.location.href=/*exp_amortization_template_create.screen*/$('exp_amortization_template_create_link_2').getUrl();
        	}
        	
        	function reportDetail(){
         		var template_exp_report_id = $('exp_amor_tp_hds_ds').getAt(0).get('template_exp_report_id');
            	new Aurora.Window({id:'temp_exp_rep_numberDetail',url:/*${/request/@context_path}/modules/expm/exp_report_maintain_read_only.screen*/$('exp_report_maintain_read_only_link_10').getUrl()+'?exp_report_header_id='+template_exp_report_id + '&canUploadFlag=false',title:'${l:EXP_AMORTIZATION_TP_HDS.EXP_REPORT_DETAIL}',width:1000,height:600});
        	}
        ]]></script>
