<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <script><![CDATA[
			function query() {
				$('error_ds').query();
			}
			
			function back() {
			    $('error_window').close();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="error_ds" autoQuery="true" model="exp.EXP7010.exp_rep_line_int_logs" pageSize="10" queryUrl="${/request/@context_path}/autocrud/exp.EXP7010.exp_rep_line_int_logs/query?batch_id=${/parameter/@batch_id}&amp;">
                <a:fields>
                    <!-- <a:field name="batch_line_id" prompt="序号"/> -->
                    <a:field name="line_number" prompt="行号"/>
                    <a:field name="message" prompt="错误信息"/>
                    <a:field name="message_date" prompt="日期"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:hBox>
                <a:button click="query" text="HAP_QUERY"/>
                <a:button click="back" text="HAP_CLOSE"/>
            </a:hBox>
            <a:grid bindTarget="error_ds" height="300" navBar="true" width="701">
                <a:columns>
                    <!-- <a:column name="batch_line_id" width="60"/> -->
                    <a:column name="line_number" width="60"/>
                    <a:column name="message" width="500"/>
                    <a:column name="message_date" renderer="Aurora.formatDate" width="80"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
