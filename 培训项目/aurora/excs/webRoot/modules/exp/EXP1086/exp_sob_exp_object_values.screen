<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
	]]></a:init-procedure>
    <a:view>
        <a:link id="EXP1086_exp_sob_exp_obj_value_enabled_update_link" url="${/request/@context_path}/modules/exp/EXP1086/exp_sob_exp_obj_value_enabled_update.svc"/>
        <script><![CDATA[
            var valueEnabledChanged = [];
            
            function EXP1086_returnFunction() {
                $('exp_sob_exp_object_values_screen').close();
            }
            
            function EXP1086_objCodeEditFun(record, name) {
                if (record.isNew) {
                    return 'EXP1086_value_textfield';
                } else {
                    return '';
                }
            }
            
            function EXP1086_onObjValueUpdateFun(dataSet, record, name, value, oldValue) {
                if (name == 'enabled_flag') {
                    if (!record.isNew) {
                        //记录哪一行的enabledFalg变化了
                        if (valueEnabledChanged[record.get('expense_object_id')]) {
                            valueEnabledChanged[record.get('expense_object_id')]['changeTime']++;
                            valueEnabledChanged[record.get('expense_object_id')]['value'] = value;
                        } else {
                            valueEnabledChanged[record.get('expense_object_id')] = {};
                            valueEnabledChanged[record.get('expense_object_id')]['changeTime'] = 1;
                            valueEnabledChanged[record.get('expense_object_id')]['value'] = value;
                        }
                    }
                }
            }
            
            function EXP1086_onObjValueSubmitSuccessFun() {
                var param = [];
            
                for (var objId in valueEnabledChanged) {
                    if (valueEnabledChanged[objId]['changeTime'] % 2 == 1) {
                        var data = {
                            sob_obj_id: objId,
                            enabled_flag: valueEnabledChanged[objId]['value']
                        }
                        param.push(data);
                    }
                }
                if (param.length != 0) {
                    Aurora.request({
                        url: $('EXP1086_exp_sob_exp_obj_value_enabled_update_link').getUrl(),
                        para: param,
                        success: function() {
                            valueEnabledChanged = [];
                        },
                        scope: this
                    });
                }
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="EXP1086_exp_obj_type_ds" autoCreate="true">
                <!-- <a:datas dataSource="/model/exp_obj_type"/> -->
                <a:fields>
                    <a:field name="expense_object_type_code" defaultValue="${/parameter/@expense_object_type_code}" prompt="EXP_EXPENSE_OBJ.EXP_OBJ_CODE" readOnly="true"/>
                    <a:field name="expense_object_type_name" defaultValue="${/parameter/@expense_object_type_name}" prompt="EXP_SOB_EXPENSE_OBJECT_TYPES.EXPENSE_OBJECT_TYPE_NAME" readOnly="true"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="EXP1086_exp_object_values_ds" autoQuery="true" model="exp.exp_sob_expense_object_values" queryUrl="${/request/@context_path}/autocrud/exp.exp_sob_expense_object_values/query?expense_object_type_id=${/parameter/@expense_object_type_id}" selectable="true">
                <a:fields>
                    <a:field name="expense_object_type_id" defaultValue="${/parameter/@expense_object_type_id}"/>
                    <a:field name="expense_object_id"/>
                    <a:field name="expense_object_code" required="true"/>
                    <a:field name="description" required="true"/>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="EXP1086_onObjValueUpdateFun"/>
                    <a:event name="submitsuccess" handler="EXP1086_onObjValueSubmitSuccessFun"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:toolbarButton click="EXP1086_returnFunction" text="PROMPT.RETURN" width="80"/>
                <a:gridButton bind="EXP1086_obj_value_grid" type="add" width="80"/>
                <a:gridButton bind="EXP1086_obj_value_grid" type="save" width="80"/>
                <a:gridButton bind="EXP1086_obj_value_grid" type="clear" width="80"/>
            </a:screenTopToolbar>
            <a:form column="2" labelWidth="100" marginWidth="36" title="EXL1086.SOB_EXP_OBJ_DEFINE">
                <a:textField name="expense_object_type_code" bindTarget="EXP1086_exp_obj_type_ds"/>
                <a:textField name="expense_object_type_name" bindTarget="EXP1086_exp_obj_type_ds"/>
            </a:form>
            <a:grid id="EXP1086_obj_value_grid" bindTarget="EXP1086_exp_object_values_ds" marginHeight="164" marginWidth="38" navBar="true">
                <a:columns>
                    <a:column name="expense_object_code" align="center" editorFunction="EXP1086_objCodeEditFun" width="80"/>
                    <a:column name="description" align="left" editor="EXP1086_value_textfield" width="150"/>
                    <a:column name="enabled_flag" align="center" editor="EXP1086_value_checkbox" width="50"/>
                </a:columns>
                <a:editors>
                    <a:textField id="EXP1086_value_textfield"/>
                    <a:checkBox id="EXP1086_value_checkbox"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
