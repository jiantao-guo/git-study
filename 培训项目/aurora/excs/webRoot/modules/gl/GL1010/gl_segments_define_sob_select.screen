<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure>
        <a:model-query defaultWhereClause="enabled_flag = &apos;Y&apos;" fetchAll="true" model="exp.setbookslist_query" rootPath="setbookslist"/>
    </a:init-procedure>
    <a:view>
        <a:link id="gl1010_segments_define_link" url="${/request/@context_path}/modules/gl/GL1010/gl_segments_define.screen"/>
        <script><![CDATA[
			function GL1010_sobselect(){
			    if(!$('GL1010_sob_ds').validate()){
			        return;
			    }
			    var dataset = $('GL1010_sob_ds');
			    sobId = dataset.getAt(0).get('set_of_books_id'); 
			    window.location.href = $('gl1010_segments_define_link').getUrl() + '?set_of_books_id=' + sobId;
			}
		
		]]></script>
        <a:dataSets>
            <a:dataSet id="GL1010_sob_select_ds">
                <a:datas dataSource="/model/setbookslist"/>
            </a:dataSet>
            <a:dataSet id="GL1010_sob_ds">
                <a:fields>
                    <a:field name="set_of_books_name" displayField="value_name" options="GL1010_sob_select_ds" required="true" returnField="set_of_books_id" valueField="value"/>
                    <a:field name="set_of_books_id"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:toolbarButton click="GL1010_sobselect" text="HAP_CONFIRM" width="80"/>
            </a:screenTopToolbar>
            <a:form marginWidth="28" title="PLEASE_SELECT_SET_OF_BOOK_ID">
                <a:comboBox name="set_of_books_name" bindTarget="GL1010_sob_ds" prompt="EXP_EXPENSE_ITEMS.SET_OF_BOOKS_ID"/>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
