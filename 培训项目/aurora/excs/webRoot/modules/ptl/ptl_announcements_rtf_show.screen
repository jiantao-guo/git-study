    <a:init-procedure>
        <model-query fetchAll="true" model="ptl.ptl_announcements_rtf_show_query" rootPath="rtf_info"/>
    </a:init-procedure>
    <a:view package="aurora.ui.std" template="default">
        <style><![CDATA[
	        .newstopic {
				font-size: 12px;
				font-weight: bold;
				color: #009689;
				height: 40px;
				border-bottom-width: 1px;
				border-bottom-style: groove;
				border-bottom-color: #c0e5ff;
				line-height: 40px;
				text-align: center;
				vertical-align: middle;
			}
			.newscontent {
			    font-family: Arial;
				margin-left: 0px;
				margin-top: 0px;
				margin-right: 0px;
				margin-bottom: 0px;
				font-size: 12px;
				line-height: 18px;
				text-align: justify;
				text-indent: 25px;
				background-color: #FFFFFF;
				color:#656565;
			}
			.newstime{
				font-family: Arial;
				font-size: 12px;
				color: #656565;
				font-weight: bold;
				margin-top: 10px;
				margin-bottom: 10px;
			}
	    ]]></style>
        <table align="center" border="0" cellpadding="0" cellspacing="0" width="60%">
            <tr>
                <td>
                    <div align="center" class="newstopic"><![CDATA[
			    ${/model/rtf_info/record/@doc_title}
			    ]]></div>
                </td>
            </tr>
        </table>
        <table align="center" border="0" cellpadding="0" cellspacing="0" width="90%">
            <tr>
                <td>
                    <div align="center" class="newstime"><![CDATA[
			    ${/model/rtf_info/record/@announce_date}
			    ]]></div>
                    <div class="newscontent"><![CDATA[
			    ${/model/rtf_info/record/@rtf_clob}
			    ]]></div>
